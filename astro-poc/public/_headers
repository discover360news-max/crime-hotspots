# Cloudflare Pages Headers Configuration
# Optimized for Astro static site
# Goal: Increase cache rate from 37% to 60-80%+

# Cache static assets aggressively (1 year)
# These files have content hashes in their names, so they can be cached forever
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 week
# PNG, JPG, SVG, WebP, ICO
/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.jpeg
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800

/*.webp
  Cache-Control: public, max-age=604800

/*.ico
  Cache-Control: public, max-age=604800

# Cache fonts for 1 year (rarely change)
/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/*.otf
  Cache-Control: public, max-age=31536000, immutable

# SEO CRITICAL: Crime story pages get stale-while-revalidate for faster repeat loads.
# Cloudflare serves stale content instantly while revalidating in background.
# DO NOT raise max-age above 3600 — content must refresh within 1h for accuracy.
# See docs/claude-context/SEO-CONFIG.md — Cloudflare Headers section.
/trinidad/crime/*
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# Cache HTML pages for 1 hour
# Short cache time so content updates propagate quickly
/*
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com https://challenges.cloudflare.com https://static.cloudflareinsights.com https://www.googletagmanager.com https://*.google-analytics.com https://*.grow.me; style-src 'self' 'unsafe-inline' https://unpkg.com https://cdn.jsdelivr.net; img-src 'self' data: https: blob:; connect-src 'self' https://docs.google.com https://script.google.com https://*.googleusercontent.com https://challenges.cloudflare.com https://cloudflareinsights.com https://static.cloudflareinsights.com https://www.google-analytics.com https://*.google-analytics.com https://*.analytics.google.com https://*.googletagmanager.com https://*.grow.me https://buttondown.com; frame-src 'self' https://challenges.cloudflare.com https://*.google.com https://*.googleusercontent.com https://*.grow.me; font-src 'self' data:; object-src 'none'; base-uri 'self'; form-action 'self' https://script.google.com
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  X-Robots-Tag: index, follow

# Cache Pagefind search index files for 1 day
/pagefind/*
  Cache-Control: public, max-age=86400

# Health endpoint: no-cache so monitoring tools always get fresh data
/api/health.json
  Cache-Control: no-cache

# Don't cache dynamic endpoints (if you add any later)
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
