---
/**
 * Trinidad & Tobago Crime Statistics Hub
 * Authority page for Trinidad crime statistics
 * Target keyword: "trinidad crime statistics"
 *
 * Features:
 * - Auto-updates daily via Astro SSG + GitHub Actions rebuild
 * - Indexable text content for SEO
 * - Year-over-year comparisons (2025 vs 2026)
 * - Latest weekly blog post integration
 * - Public CSV download links
 */

// Keep statistics page static (pre-rendered at build time)
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Hero from '../../components/Hero.astro';
import StatCards from '../../components/StatCards.astro';
import DataTable from '../../components/DataTable.astro';
import { getTrinidadCrimes } from '../../lib/crimeData';
import { countCrimeType, calculateInsights } from '../../lib/dashboardHelpers';
import { getCollection } from 'astro:content';
import { TRINIDAD_CSV_URLS } from '../../config/csvUrls';
import { routes } from '../../config/routes';
import {
  compareYearToDate,
  getTopRegions,
  getTotalCrimeCount,
  formatPercentChange,
  getCurrentPeriodDescription,
  TRACKED_CRIME_TYPES
} from '../../lib/statisticsHelpers';
import NewsletterSignup from '../../components/NewsletterSignup.astro';

// Fetch all crimes at build time
const allCrimes = await getTrinidadCrimes();

// Dynamic year handling (future-proof)
const currentYear = new Date().getFullYear();
const previousYear = currentYear - 1;

// Filter by year
const crimesCurrent = allCrimes.filter(c => c.year === currentYear);
const crimesPrevious = allCrimes.filter(c => c.year === previousYear);

// Calculate statistics
const yoyComparisons = compareYearToDate(crimesCurrent, crimesPrevious);
const topRegions = getTopRegions(crimesCurrent);
const insightsCurrent = calculateInsights(crimesCurrent);
const totalCrimesCurrent = getTotalCrimeCount(crimesCurrent);
const totalCrimesPrevious = getTotalCrimeCount(crimesPrevious);

// Key crime counts for current year
const murderCount = countCrimeType(crimesCurrent, 'Murder');
const robberyCount = countCrimeType(crimesCurrent, 'Robbery');
const shootingCount = countCrimeType(crimesCurrent, 'Shooting');

// Previous year final counts
const murderCountPrevious = countCrimeType(crimesPrevious, 'Murder');
const robberyCountPrevious = countCrimeType(crimesPrevious, 'Robbery');

// Get total YoY change
const total2025SamePeriod = yoyComparisons.reduce((sum, c) => sum + c.count2025, 0);
const total2026YTD = yoyComparisons.reduce((sum, c) => sum + c.count2026, 0);
const totalYoYChange = total2025SamePeriod > 0
  ? ((total2026YTD - total2025SamePeriod) / total2025SamePeriod) * 100
  : 0;

// Prepare stat cards data
const statCardsData = [
  {
    label: 'Murders',
    current: murderCount,
    previous: yoyComparisons.find(c => c.type === 'Murder')?.count2025 || 0,
    yoyChange: yoyComparisons.find(c => c.type === 'Murder')?.percentChange || 0,
    direction: yoyComparisons.find(c => c.type === 'Murder')?.direction || 'flat'
  },
  {
    label: 'Robberies',
    current: robberyCount,
    previous: yoyComparisons.find(c => c.type === 'Robbery')?.count2025 || 0,
    yoyChange: yoyComparisons.find(c => c.type === 'Robbery')?.percentChange || 0,
    direction: yoyComparisons.find(c => c.type === 'Robbery')?.direction || 'flat'
  },
  {
    label: 'Shootings',
    current: shootingCount,
    previous: yoyComparisons.find(c => c.type === 'Shooting')?.count2025 || 0,
    yoyChange: yoyComparisons.find(c => c.type === 'Shooting')?.percentChange || 0,
    direction: yoyComparisons.find(c => c.type === 'Shooting')?.direction || 'flat'
  },
  {
    label: 'Total Incidents',
    current: total2026YTD,
    previous: total2025SamePeriod,
    yoyChange: totalYoYChange,
    direction: totalYoYChange < -0.5 ? 'down' : totalYoYChange > 0.5 ? 'up' : 'flat'
  }
];

// Get latest Trinidad blog post
const blogPosts = await getCollection('blog', ({ data }) => data.country === 'tt');
const latestPost = blogPosts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
)[0];

// Current period description
const periodDescription = getCurrentPeriodDescription();

// Last updated = build time
const lastUpdated = new Date().toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric',
  year: 'numeric'
});

// Crime rate calculations (per 100,000 population)
// Trinidad & Tobago population: ~1.5 million (2024 estimate)
const POPULATION = 1500000;

// Previous year FINAL rates (complete data)
const murderRatePrevious = ((murderCountPrevious / POPULATION) * 100000).toFixed(1);
const robberyRatePrevious = ((robberyCountPrevious / POPULATION) * 100000).toFixed(1);
const totalCrimeRatePrevious = ((totalCrimesPrevious / POPULATION) * 100000).toFixed(1);

// Current year rates (year-to-date)
const murderRateCurrent = ((murderCount / POPULATION) * 100000).toFixed(1);
const robberyRateCurrent = ((robberyCount / POPULATION) * 100000).toFixed(1);
const totalCrimeRateCurrent = ((totalCrimesCurrent / POPULATION) * 100000).toFixed(1);

// Projection calculations (based on current pace)
const startOfYear = new Date(`${currentYear}-01-01`);
const now = new Date();
const daysElapsed = Math.floor((now - startOfYear) / (1000 * 60 * 60 * 24));
const daysInYear = 365;

// Projected annual totals
const murderProjected = daysElapsed > 0 ? Math.round((murderCount / daysElapsed) * daysInYear) : 0;
const robberyProjected = daysElapsed > 0 ? Math.round((robberyCount / daysElapsed) * daysInYear) : 0;
const totalCrimesProjected = daysElapsed > 0 ? Math.round((totalCrimesCurrent / daysElapsed) * daysInYear) : 0;

// Projected rates
const murderRateProjected = ((murderProjected / POPULATION) * 100000).toFixed(1);
const robberyRateProjected = ((robberyProjected / POPULATION) * 100000).toFixed(1);
const totalCrimeRateProjected = ((totalCrimesProjected / POPULATION) * 100000).toFixed(1);

// SEO
const title = `Trinidad Crime Statistics & Crime Rate ${currentYear} - Live Data | Crime Hotspots`;
const description = `Trinidad & Tobago crime statistics and crime rate for ${currentYear}. ${murderCount} murders so far (projected ${murderProjected} annually). ${previousYear} final rate: ${murderRatePrevious} per 100k. Updated daily with year-over-year comparisons and regional analysis.`;
const canonicalUrl = "https://crimehotspots.com/trinidad/statistics/";

// Structured Data - Dataset
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Dataset",
  "name": `Trinidad & Tobago Crime Statistics ${currentYear}`,
  "description": `Comprehensive crime statistics for Trinidad & Tobago including murders, robberies, shootings, and other offenses. Data collected from verified news sources and updated daily. Includes ${currentYear} current data and ${previousYear} final statistics.`,
  "url": canonicalUrl,
  "license": "https://creativecommons.org/licenses/by/4.0/",
  "creator": {
    "@type": "Organization",
    "name": "Crime Hotspots",
    "url": "https://crimehotspots.com"
  },
  "distribution": [
    {
      "@type": "DataDownload",
      "encodingFormat": "text/csv",
      "contentUrl": TRINIDAD_CSV_URLS[currentYear]
    },
    {
      "@type": "DataDownload",
      "encodingFormat": "text/csv",
      "contentUrl": TRINIDAD_CSV_URLS[previousYear]
    }
  ],
  "temporalCoverage": `${previousYear}/${currentYear}`,
  "spatialCoverage": {
    "@type": "Place",
    "name": "Trinidad and Tobago",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 10.6918,
      "longitude": -61.2225
    }
  },
  "dateModified": new Date().toISOString()
};

// Breadcrumb structured data
const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://crimehotspots.com/" },
    { "@type": "ListItem", "position": 2, "name": "Trinidad", "item": "https://crimehotspots.com/trinidad/dashboard/" },
    { "@type": "ListItem", "position": 3, "name": "Statistics" }
  ]
};
---

<Layout title={title} description={description}>
  <!-- Breadcrumbs (Above Hero) -->
  <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 pt-4">
    <Breadcrumbs items={[
      { label: 'Home', href: '/' },
      { label: 'Trinidad & Tobago', href: '/trinidad/dashboard/' },
      { label: 'Statistics' }
    ]} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="Trinidad & Tobago Crime Statistics"
    subtitle="Real-time crime statistics and data analysis for Trinidad & Tobago. Track the crime rate, murder statistics, robbery trends, and regional crime data. Updated daily from verified sources."
    badge={`Updated daily • Last updated: ${lastUpdated}`}
    primaryCTA={{
      text: "View Interactive Dashboard",
      href: "/trinidad/dashboard/",
      icon: "dashboard"
    }}
    secondaryCTA={{
      text: `Download ${currentYear} Data`,
      href: TRINIDAD_CSV_URLS[currentYear],
      icon: "download",
      target: "_blank",
      rel: "noopener noreferrer"
    }}
  />

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto px-4 py-8">

    <!-- Current Year Summary -->
    <section class="mb-10">
      <h2 class="text-body font-bold text-slate-500 dark:text-[hsl(0_0%_55%)] mb-4">
        {currentYear} Year-to-Date Summary
      </h2>
      <p class="text-sm text-slate-500 dark:text-[hsl(0_0%_60%)] mb-4">
        {periodDescription}
      </p>

      <StatCards stats={statCardsData} />
    </section>

    <!-- Trinidad Crime Rate -->
    <section class="mb-10">
      <h2 class="text-body font-bold text-slate-500 dark:text-[hsl(0_0%_55%)] mb-4">
        Trinidad Crime Rate {currentYear}
      </h2>
      <p class="text-sm text-slate-500 dark:text-[hsl(0_0%_60%)] mb-4">
        Crime rates per 100,000 population (based on ~1.5 million population)
      </p>

      <!-- Previous Year Final (Official Rate) -->
      <div class="mb-6">
        <h3 class="text-base font-semibold text-slate-700 dark:text-[hsl(0_0%_92%)] mb-3">
          {previousYear} Final Crime Rate (Official)
        </h3>
        <div class="bg-white dark:bg-[hsl(0_0%_8%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_12%)] p-5 shadow-sm">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="text-center p-3 bg-slate-50 dark:bg-[hsl(0_0%_10%)] rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Murder Rate</div>
              <div class="text-2xl font-bold text-rose-600 dark:text-rose-400">{murderRatePrevious}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">{murderCountPrevious} murders</div>
            </div>
            <div class="text-center p-3 bg-slate-50 dark:bg-[hsl(0_0%_10%)] rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Robbery Rate</div>
              <div class="text-2xl font-bold text-slate-700 dark:text-[hsl(0_0%_92%)]">{robberyRatePrevious}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">{robberyCountPrevious} robberies</div>
            </div>
            <div class="text-center p-3 bg-slate-50 dark:bg-[hsl(0_0%_10%)] rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Overall Rate</div>
              <div class="text-2xl font-bold text-slate-700 dark:text-[hsl(0_0%_92%)]">{totalCrimeRatePrevious}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">{totalCrimesPrevious} incidents</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Current Year Progress -->
      <div class="mb-6">
        <h3 class="text-base font-semibold text-slate-700 dark:text-[hsl(0_0%_92%)] mb-3">
          {currentYear} Current Progress ({lastUpdated})
        </h3>
        <div class="bg-white dark:bg-[hsl(0_0%_8%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_12%)] p-5 shadow-sm">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="text-center p-3 bg-rose-50 dark:bg-rose-950/30 rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Murder Rate (YTD)</div>
              <div class="text-2xl font-bold text-rose-600 dark:text-rose-400">{murderRateCurrent}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">{murderCount} murders so far</div>
            </div>
            <div class="text-center p-3 bg-slate-50 dark:bg-[hsl(0_0%_10%)] rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Robbery Rate (YTD)</div>
              <div class="text-2xl font-bold text-slate-700 dark:text-[hsl(0_0%_92%)]">{robberyRateCurrent}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">{robberyCount} robberies so far</div>
            </div>
            <div class="text-center p-3 bg-slate-50 dark:bg-[hsl(0_0%_10%)] rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Overall Rate (YTD)</div>
              <div class="text-2xl font-bold text-slate-700 dark:text-[hsl(0_0%_92%)]">{totalCrimeRateCurrent}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">{totalCrimesCurrent} incidents so far</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Projected (At Current Pace) -->
      <div>
        <h3 class="text-base font-semibold text-slate-700 dark:text-[hsl(0_0%_92%)] mb-3">
          {currentYear} Projected (If Current Pace Continues)
        </h3>
        <div class="bg-white dark:bg-[hsl(0_0%_8%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_12%)] p-5 shadow-sm">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="text-center p-3 bg-amber-50 dark:bg-amber-950/30 rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Projected Murder Rate</div>
              <div class="text-2xl font-bold text-amber-700 dark:text-amber-400">{murderRateProjected}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">~{murderProjected} murders projected</div>
            </div>
            <div class="text-center p-3 bg-amber-50 dark:bg-amber-950/30 rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Projected Robbery Rate</div>
              <div class="text-2xl font-bold text-amber-700 dark:text-amber-400">{robberyRateProjected}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">~{robberyProjected} robberies projected</div>
            </div>
            <div class="text-center p-3 bg-amber-50 dark:bg-amber-950/30 rounded-lg">
              <div class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] font-medium mb-1">Projected Overall Rate</div>
              <div class="text-2xl font-bold text-amber-700 dark:text-amber-400">{totalCrimeRateProjected}</div>
              <div class="text-xs text-slate-400 dark:text-[hsl(0_0%_50%)] mt-1">~{totalCrimesProjected} incidents projected</div>
            </div>
          </div>
          <p class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] mt-3 text-center">
            Based on {daysElapsed} days of data. Projection assumes current trends continue for full year.
          </p>
        </div>
      </div>

      <p class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)] mt-4">
        The Trinidad and Tobago crime rate is calculated per 100,000 population to enable fair comparison with other countries and historical trends.
      </p>
    </section>

    <!-- Crime by Type -->
    <section class="mb-10">
      <h2 class="text-body font-bold text-slate-500 dark:text-[hsl(0_0%_55%)] mb-4">
        Crime by Type ({currentYear})
      </h2>
      <div class="bg-white dark:bg-[hsl(0_0%_8%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_12%)] overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-slate-50 dark:bg-[hsl(0_0%_10%)] border-b border-slate-200 dark:border-[hsl(0_0%_12%)]">
              <tr>
                <th class="text-left px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">Crime Type</th>
                <th class="text-right px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">{currentYear} Count</th>
                <th class="text-right px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">{previousYear} (Same Period)</th>
                <th class="text-right px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">Change</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-[hsl(0_0%_12%)]">
              {yoyComparisons.filter(c => c.count2026 > 0 || c.count2025 > 0).map(comparison => (
                <tr class="hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_10%)]">
                  <td class="px-4 py-3 text-slate-700 dark:text-[hsl(0_0%_85%)] font-medium">{comparison.type}</td>
                  <td class="px-4 py-3 text-right text-slate-700 dark:text-[hsl(0_0%_85%)]">{comparison.count2026}</td>
                  <td class="px-4 py-3 text-right text-slate-500 dark:text-[hsl(0_0%_60%)]">{comparison.count2025}</td>
                  <td class={`px-4 py-3 text-right font-medium ${comparison.direction === 'down' ? 'text-emerald-600 dark:text-emerald-400' : comparison.direction === 'up' ? 'text-rose-600 dark:text-rose-400' : 'text-slate-400 dark:text-[hsl(0_0%_50%)]'}`}>
                    {comparison.direction === 'down' ? '↓' : comparison.direction === 'up' ? '↑' : '→'}
                    {formatPercentChange(comparison.percentChange)}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Regional Breakdown -->
    <section class="mb-10">
      <h2 class="text-body font-bold text-slate-500 dark:text-[hsl(0_0%_55%)] mb-4">
        Regional Breakdown ({currentYear})
      </h2>
      <p class="text-sm text-slate-500 dark:text-[hsl(0_0%_60%)] mb-4">
        Top 5 divisions by crime count
      </p>
      <div class="bg-white dark:bg-[hsl(0_0%_8%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_12%)] overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-slate-50 dark:bg-[hsl(0_0%_10%)] border-b border-slate-200 dark:border-[hsl(0_0%_12%)]">
              <tr>
                <th class="text-left px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">Division</th>
                <th class="text-right px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">Incidents</th>
                <th class="text-right px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_85%)]">% of Total</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-[hsl(0_0%_12%)]">
              {topRegions.map((region, index) => (
                <tr class="hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_10%)]">
                  <td class="px-4 py-3 text-slate-700 dark:text-[hsl(0_0%_85%)]">
                    <span class="inline-flex items-center">
                      <span class="w-5 h-5 flex items-center justify-center bg-slate-100 dark:bg-[hsl(0_0%_13%)] rounded text-xs font-medium text-slate-500 dark:text-[hsl(0_0%_55%)] mr-2">
                        {index + 1}
                      </span>
                      {region.region}
                    </span>
                  </td>
                  <td class="px-4 py-3 text-right text-slate-700 dark:text-[hsl(0_0%_85%)] font-medium">{region.count}</td>
                  <td class="px-4 py-3 text-right text-slate-500 dark:text-[hsl(0_0%_60%)]">{region.percentage.toFixed(1)}%</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Latest Analysis -->
    {latestPost && (
      <section class="mb-10">
        <h2 class="text-body font-bold text-slate-500 dark:text-[hsl(0_0%_55%)] mb-4">
          Latest Analysis
        </h2>
        <div class="bg-white dark:bg-[hsl(0_0%_8%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_12%)] p-6 shadow-sm">
          <h3 class="text-lg font-semibold text-slate-800 dark:text-[hsl(0_0%_92%)] mb-3">
            <a href={`/blog/${latestPost.slug}/`} class="hover:text-rose-600 dark:text-[hsl(0_0%_92%)] dark:hover:text-rose-400 transition-colors">
              {latestPost.data.title}
            </a>
          </h3>
          <p class="text-slate-600 dark:text-[hsl(0_0%_65%)] text-sm leading-relaxed mb-4">
            {latestPost.data.excerpt}
          </p>
          <div class="flex items-center justify-between flex-wrap gap-4">
            <div class="flex items-center gap-4 text-xs text-slate-500 dark:text-[hsl(0_0%_55%)]">
              <span>{latestPost.data.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
              <span>{latestPost.data.readTime}</span>
            </div>
            <a
              href={`/blog/${latestPost.slug}/`}
              class="inline-flex items-center text-sm font-medium text-rose-600 dark:text-rose-400 hover:text-rose-700 dark:hover:text-rose-300"
            >
              Read full report
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Download Data -->
    <section class="mb-10">
      <h2 class="text-body font-bold text-slate-500 dark:text-[hsl(0_0%_55%)] mb-4">
        Download Data
      </h2>
      <p class="text-sm text-slate-500 dark:text-[hsl(0_0%_60%)] mb-4">
        Raw crime data in CSV format. Free to use with attribution.
      </p>
      <div class="flex flex-col sm:flex-row gap-3">
        <a
          href={TRINIDAD_CSV_URLS[currentYear]}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-5 py-3 min-h-[44px] bg-rose-600 text-white rounded-lg hover:bg-rose-700 active:bg-rose-800 transition font-medium text-sm shadow-sm"
