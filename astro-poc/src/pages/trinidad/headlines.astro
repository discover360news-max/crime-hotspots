---
/**
 * Trinidad & Tobago Headlines Page
 * Shows all crime headlines with filters (Area, Crime Type, Date)
 */

// Keep headlines static (pre-rendered at build time)
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Hero from '../../components/Hero.astro';
import SiteNotificationBanner from '../../components/SiteNotificationBanner.astro';
import BlogRotatingBanner from '../../components/BlogRotatingBanner.astro';
import { getTrinidadCrimes, type Crime } from '../../lib/crimeData';
import { dataUpdateNotice } from '../../config/siteNotifications';
import { getCountryName } from '../../data/countries';
import { routes } from '../../config/routes';

// Fetch all crimes (server-side) - include all years for filtering
const allCrimes = await getTrinidadCrimes();

// Get available years for filters
const availableYears = [...new Set(allCrimes.map(c => c.year))].sort((a, b) => b - a);
const currentYear = availableYears[0];

console.log(`ðŸ“° Headlines loaded ${allCrimes.length} total crimes (${availableYears.join(', ')})`);

// Get unique areas and crime types for filters (from all years)
const areas = [...new Set(allCrimes.map(c => c.area).filter(Boolean))].sort();
const crimeTypes = [...new Set(allCrimes.map(c => c.crimeType).filter(Boolean))].sort();

// Group crimes by date for initial render (first 30 crimes)
const initialCrimes = allCrimes.slice(0, 30);
const crimesByDate = new Map<string, Crime[]>();

initialCrimes.forEach(crime => {
  const dateKey = crime.date; // YYYY-MM-DD format
  if (!crimesByDate.has(dateKey)) {
    crimesByDate.set(dateKey, []);
  }
  crimesByDate.get(dateKey)!.push(crime);
});

// Sort dates descending (most recent first)
const sortedDates = Array.from(crimesByDate.keys()).sort((a, b) =>
  new Date(b).getTime() - new Date(a).getTime()
);

// Helper function to calculate victim count
function calculateVictimCount(crimes: Crime[]): number {
  return crimes.reduce((total, crime) => {
    const victimCount = crime.victimCount && crime.victimCount > 0 ? crime.victimCount : 1;
    return total + victimCount;
  }, 0);
}

// Most recent crime date for freshness indicator
const latestCrimeDate = allCrimes[0]?.dateObj ?? new Date();
const freshnessText = latestCrimeDate.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });

// SEO
const title = `Trinidad & Tobago Crime Headlines â€” Latest Reports`;
const description = `Trinidad & Tobago crime headlines updated daily. Filter incidents (Murder, Robbery, etc.) by area and date, sourced from Guardian, Express, and Newsday.`;

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', href: routes.home },
  { label: getCountryName('tt'), href: routes.trinidad.dashboard },
  { label: 'Headlines' }
];
---

<Layout title={title} description={description} includeTurnstile={true}>
  <!-- Breadcrumbs (Above Hero) -->
  <div class="w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
    <Breadcrumbs items={breadcrumbs} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="Trinidad & Tobago Crime Headlines"
    subtitle="Latest crime reports from all years. Filter incidents by area, crime type, and date."
    compact={true}
    primaryCTA={{
      text: "Dashboard",
      href: routes.trinidad.dashboard,
      icon: "dashboard"
    }}
    secondaryCTA={{
      text: "Murder Count",
      href: routes.trinidad.murderCount
    }}
  >
    <div class="flex items-center gap-2">
      <button
        id="filtersBtn"
        class="px-4 py-1.5 min-h-[22px] inline-flex items-center justify-center border-2 border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-700 dark:text-[hsl(0_0%_85%)] hover:border-rose-600 hover:text-rose-600 active:bg-rose-50 dark:active:bg-rose-950/30 rounded-lg transition font-medium text-xs whitespace-nowrap"
      >
        <span id="filtersBtnText">Filters â€º</span>
      </button>
      <button
        id="clearFiltersInline"
        class="hidden text-xs text-rose-600 hover:text-rose-700 font-medium whitespace-nowrap transition"
      >
        Clear
      </button>
    </div>
  </Hero>

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-5" data-pagefind-ignore>

    <!-- Site Notification Banner -->
    <SiteNotificationBanner notification={dataUpdateNotice} />

    <!-- Results Count + Data Freshness -->
    <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-300 dark:via-[hsl(0_0%_22%)] to-transparent mb-3"></div>
    <div class="mb-3 text-xs flex flex-wrap items-center justify-between gap-y-1.5">
      <div class="text-slate-400 dark:text-[hsl(0_0%_50%)]">
        Showing <span id="resultsShowing">{Math.min(30, allCrimes.length)}</span> of all <a href={routes.trinidad.archive} class="border-b border-dotted border-slate-400 dark:border-[hsl(0_0%_40%)] hover:text-rose-600 hover:border-rose-600 transition"><span id="resultsTotal">{allCrimes.length}</span></a> listed crimes
      </div>
      <span class="text-slate-400 dark:text-[hsl(0_0%_50%)] flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        Data as of {freshnessText}
      </span>
      <div class="basis-full sm:basis-auto">
        <a href={routes.trinidad.archive} class="text-slate-400 dark:text-[hsl(0_0%_50%)] border-b border-dotted border-slate-400 dark:border-[hsl(0_0%_40%)] hover:text-rose-600 hover:border-rose-600 transition">View Archive</a>
      </div>
    </div>
    <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-300 dark:via-[hsl(0_0%_22%)] to-transparent mb-6"></div>

    <!-- Blog Rotating Banner -->
    <BlogRotatingBanner country="tt" limit={3} />

    <!-- Crime Accordions by Date -->
    <div id="crimeAccordions">
      {sortedDates.map((date, index) => {
        const crimes = crimesByDate.get(date)!;
        const incidentCount = crimes.length;
        const victimCount = calculateVictimCount(crimes);
        const isExpanded = index === 0;
        const formattedDate = new Date(date).toLocaleDateString('en-US', {
          weekday: 'long',
          month: 'long',
          day: 'numeric',
          year: 'numeric'
        });

        return (
          <div class={`date-accordion mb-3 rounded-xl transition-colors duration-300 ${isExpanded ? 'bg-slate-50/60 dark:bg-[hsl(0_0%_6%)]/60 border border-rose-200 dark:border-rose-900/40' : ''}`} data-date={date}>
            <button
              class="accordion-header w-full px-4 py-3 bg-white/85 dark:bg-[hsl(0_0%_8%)]/85 backdrop-blur-md rounded-lg hover:bg-white/90 dark:hover:bg-[hsl(0_0%_10%)]/90 transition flex items-center justify-between group border"
              style={isExpanded ? 'border-color:#e11d48' : 'border-color:var(--ch-border)'}
              aria-expanded={isExpanded}
            >
              <div class="flex items-center gap-3">
                <svg
                  class={`chevron w-5 h-5 text-slate-400 dark:text-[hsl(0_0%_50%)] transition-transform duration-200 ${isExpanded ? 'rotate-90' : ''}`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>

                <div class="text-left">
                  <h3 class="accordion-title text-caption font-bold leading-snug" style={isExpanded ? 'color:#e11d48' : 'color:var(--ch-text)'}>{formattedDate}</h3>
                  <p class="text-caption text-slate-500 dark:text-[hsl(0_0%_55%)]">{incidentCount} {incidentCount === 1 ? 'incident' : 'incidents'} affecting {victimCount} {victimCount === 1 ? 'victim' : 'victims'}</p>
                </div>
              </div>

              <div class="flex items-center gap-2">
                <span class={`tap-hint text-caption text-slate-400 dark:text-[hsl(0_0%_45%)] ${isExpanded ? 'hidden' : ''}`}>Tap to view</span>
                <span class="px-1.5 py-0.5 min-h-[20px] flex items-center justify-center rounded-full bg-slate-200 dark:bg-[hsl(0_0%_20%)] text-slate-600 dark:text-[hsl(0_0%_55%)] text-caption font-medium">
                  {incidentCount}
                </span>
              </div>
            </button>

            <div class={`accordion-content overflow-hidden transition-all duration-300 ${isExpanded ? 'max-h-[10000px] mt-3 px-3 pb-3' : 'max-h-0'}`}>
              <div class="relative pl-7">
                {/* Vertical dotted line (muted grey) */}
                <div class="absolute left-2.5 top-0 bottom-0 w-px border-l-2 border-dotted border-slate-300 dark:border-[hsl(0_0%_25%)]"></div>

                <div class="space-y-1">
                  {crimes.map(crime => (
                    <div
                      class="crime-card relative pl-4 py-2.5 rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition cursor-pointer group"
                      data-crime-slug={crime.slug}
                    >
                      {/* Timeline dot (muted grey) */}
                      <div aria-hidden="true" class="absolute left-[-18px] top-4 w-2 h-2 rounded-full bg-slate-300 dark:bg-[hsl(0_0%_35%)]"></div>

                      <div class="text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_80%)] group-hover:text-rose-600 transition">
                        {crime.headline}
                      </div>
                      <div class="flex items-center gap-2 mt-1 text-xs text-slate-400 dark:text-[hsl(0_0%_45%)]">
                        <span class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-[hsl(0_0%_15%)] text-slate-500 dark:text-[hsl(0_0%_60%)]">{crime.primaryCrimeType || crime.crimeType}</span>
                        <span>{crime.area}</span>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Load More -->
    <div class="mt-8 text-center">
      <button
        id="loadMore"
        class="px-6 py-2.5 bg-rose-600 text-white rounded-lg hover:bg-rose-700 active:bg-rose-800 transition font-medium text-xs"
      >
        Load More
      </button>
    </div>
  </main>

  <!-- Filters Tray -->
  <div id="filtersTray" class="fixed inset-0 z-50 pointer-events-none overflow-hidden">
    <!-- Backdrop -->
    <div id="filtersBackdrop" class="absolute inset-0 bg-black/50 backdrop-blur-sm opacity-0 transition-opacity duration-300 pointer-events-none"></div>

    <!-- Tray Content -->
    <div id="filtersTrayContent" class="absolute right-0 top-0 h-full max-w-[min(20rem,calc(100vw-2rem))] w-full bg-white/85 dark:bg-[hsl(0_0%_8%)]/90 backdrop-blur-lg rounded-l-2xl shadow-2xl transform translate-x-full transition-transform duration-300 pointer-events-auto overflow-y-auto">
      <div class="p-5">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-heading font-bold text-slate-700 dark:text-[hsl(0_0%_92%)] leading-tight">Filters</h2>
          <button id="closeFiltersBtn" class="text-slate-400 dark:text-[hsl(0_0%_50%)] hover:text-slate-600 dark:hover:text-[hsl(0_0%_75%)] transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Filter Options -->
        <div class="space-y-4">
          <!-- Date Range -->
          <div>
            <label for="dateFrom" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">From Date</label>
            <input
              type="date"
              id="dateFrom"
              class="filter-date-input w-full px-4 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            />
          </div>

          <div>
            <label for="dateTo" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">To Date</label>
            <input
              type="date"
              id="dateTo"
              class="filter-date-input w-full px-4 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            />
          </div>

          <!-- Crime Type -->
          <div>
            <label for="crimeType" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">Crime Type</label>
            <select
              id="crimeType"
              class="filter-select w-full pl-4 pr-10 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            >
              <option value="">All Types</option>
              {crimeTypes.map(type => (
                <option value={type}>{type}</option>
              ))}
            </select>
          </div>

          <!-- Area -->
          <div>
            <label for="area" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">Area</label>
            <select
              id="area"
              class="filter-select w-full pl-4 pr-10 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            >
              <option value="">All Areas</option>
              {areas.map(area => (
                <option value={area}>{area}</option>
              ))}
            </select>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-2 pt-2">
            <button
              id="clearFilters"
              class="flex-1 px-4 py-2 text-rose-600 hover:text-rose-700 active:text-rose-800 transition font-medium text-xs"
            >
              Clear Filters
            </button>
            <button
              id="applyFilters"
              class="flex-1 px-4 py-2 border-2 border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg transition-all duration-200 font-medium text-xs"
            >
              Apply
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Client-side filtering script -->
  <script define:vars={{ allCrimes }}>
    // Expose crimes data globally for modal safety context
    window.__crimesData = allCrimes;

    // XSS Prevention: Escape HTML special characters
    function escapeHtml(str) {
      if (str == null) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    }

    let currentPage = 1;
    const perPage = 30;
    let filteredCrimes = [...allCrimes];
    let isFiltered = false;

    // Filter function
    function applyFilters() {
      const dateFrom = document.getElementById('dateFrom').value;
      const dateTo = document.getElementById('dateTo').value;
      const crimeType = document.getElementById('crimeType').value;
      const area = document.getElementById('area').value;

      // Check if any filter is active
      isFiltered = !!(dateFrom || dateTo || crimeType || area);

      filteredCrimes = allCrimes.filter(crime => {
        const crimeDate = new Date(crime.date);

        // Date filters
        if (dateFrom && crimeDate < new Date(dateFrom)) return false;
        if (dateTo && crimeDate > new Date(dateTo)) return false;

        // Crime type filter
        if (crimeType && crime.crimeType !== crimeType) return false;

        // Area filter
        if (area && crime.area !== area) return false;

        return true;
      });

      // Reset to page 1
      currentPage = 1;
      renderCrimes();
      updateResultsCount();
    }

    // Render crimes (accordion mode when no filters, grid mode when filtered)
    function renderCrimes() {
      const container = document.getElementById('crimeAccordions');
      const loadMore = document.getElementById('loadMore');

      // Empty state when filters return no results
      if (filteredCrimes.length === 0) {
        container.innerHTML = `
          <div class="rounded-lg p-8 text-center" style="background:var(--ch-surface);border:1px solid var(--ch-border)">
            <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color:var(--ch-border)">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <p class="text-sm mb-2" style="color:var(--ch-text-muted)">No crimes match your filters.</p>
            <p class="text-xs" style="color:var(--ch-text-muted)">Try broadening your date range, area, or crime type.</p>
          </div>`;
        loadMore.style.display = 'none';
        return;
      }

      const crimes = filteredCrimes.slice(0, currentPage * perPage);

      if (isFiltered) {
        // FILTERED MODE: Show flat compact list (no accordions, no timeline)
        container.innerHTML = `
          <div class="space-y-1">
            ${crimes.map(crime => createCrimeListItemHTML(crime)).join('')}
          </div>
        `;
      } else {
        // ACCORDION MODE: Group by date
        const crimesByDate = new Map();

        crimes.forEach(crime => {
          const dateKey = crime.date;
          if (!crimesByDate.has(dateKey)) {
            crimesByDate.set(dateKey, []);
          }
          crimesByDate.get(dateKey).push(crime);
        });

        // Sort dates descending
        const sortedDates = Array.from(crimesByDate.keys()).sort((a, b) =>
          new Date(b).getTime() - new Date(a).getTime()
        );

        // Render accordions
        container.innerHTML = sortedDates.map((date, index) => {
          const dateCrimes = crimesByDate.get(date);
          const isExpanded = index === 0;
          return createAccordionHTML(date, dateCrimes, isExpanded);
        }).join('');

        // Reattach accordion event listeners
        attachAccordionListeners();
      }

      // Show/hide load more button
      if (crimes.length >= filteredCrimes.length) {
        loadMore.style.display = 'none';
      } else {
        loadMore.style.display = 'block';
      }

    }

    // Create compact crime list item HTML
    function createCrimeListItemHTML(crime) {
      const crimeType = crime.primaryCrimeType || crime.crimeType;
      return `
        <div class="crime-card relative py-2.5 px-3 rounded-lg transition cursor-pointer group" data-crime-slug="${escapeHtml(crime.slug)}" style="background:transparent" onmouseover="this.style.background='var(--ch-surface-hover)'" onmouseout="this.style.background='transparent'">
          <div class="text-sm font-medium group-hover:text-rose-600 transition" style="color:var(--ch-text)">
            ${escapeHtml(crime.headline)}
          </div>
          <div class="flex items-center gap-2 mt-1 text-xs" style="color:var(--ch-text-muted)">
            <span class="px-1.5 py-0.5 rounded" style="background:var(--ch-pill-bg);color:var(--ch-pill-text)">${escapeHtml(crimeType)}</span>
            <span>${escapeHtml(crime.area)}</span>
          </div>
        </div>
      `;
    }

    // Calculate victim count for a group of crimes
    function calculateVictimCount(crimes) {
      return crimes.reduce((total, crime) => {
        const victimCount = crime.victimCount && crime.victimCount > 0 ? crime.victimCount : 1;
        return total + victimCount;
      }, 0);
    }

    // Create accordion HTML
    function createAccordionHTML(date, crimes, isExpanded) {
      const formattedDate = new Date(date).toLocaleDateString('en-US', {
        weekday: 'long',
        month: 'long',
        day: 'numeric',
        year: 'numeric'
      });

      const incidentCount = crimes.length;
      const victimCount = calculateVictimCount(crimes);
      const expandedClass = isExpanded ? 'max-h-[10000px] mt-3 px-3 pb-3' : 'max-h-0';
      const chevronClass = isExpanded ? 'rotate-90' : '';
      const borderStyle = isExpanded ? 'background:var(--ch-surface);border:1px solid #e11d48' : 'background:var(--ch-surface);border:1px solid var(--ch-border)';
      const textStyle = isExpanded ? 'color:#e11d48' : 'color:var(--ch-text)';
      const wrapperClass = isExpanded ? 'bg-slate-50/60 dark:bg-[hsl(0_0%_6%)]/60 border border-rose-200 dark:border-rose-900/40' : '';
      const tapHintClass = isExpanded ? 'hidden' : '';

      return `
        <div class="date-accordion mb-3 rounded-xl transition-colors duration-300 ${wrapperClass}" data-date="${escapeHtml(date)}">
          <button
            class="accordion-header w-full px-4 py-3 rounded-lg transition flex items-center justify-between group"
            style="${borderStyle}"
            aria-expanded="${isExpanded}"
          >
            <div class="flex items-center gap-3">
              <svg
                class="chevron w-5 h-5 transition-transform duration-200 ${chevronClass}"
                style="color:var(--ch-text-muted)"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>

              <div class="text-left">
                <h3 class="accordion-title text-caption font-bold leading-snug" style="${textStyle}">${escapeHtml(formattedDate)}</h3>
                <p class="text-caption" style="color:var(--ch-text-muted)">${incidentCount} ${incidentCount === 1 ? 'incident' : 'incidents'} affecting ${victimCount} ${victimCount === 1 ? 'victim' : 'victims'}</p>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <span class="tap-hint text-caption ${tapHintClass}" style="color:var(--ch-text-muted)">Tap to view</span>
              <span class="px-1.5 py-0.5 min-h-[20px] flex items-center justify-center rounded-full text-caption font-medium" style="background:var(--ch-pill-bg);color:var(--ch-pill-text)">
                ${incidentCount}
              </span>
            </div>
          </button>

          <div class="accordion-content overflow-hidden transition-all duration-300 ${expandedClass}">
            <div class="relative pl-7">
              <div class="absolute left-2.5 top-0 bottom-0 w-px border-l-2 border-dotted" style="border-color:var(--ch-border)"></div>
              <div class="space-y-1">
                ${crimes.map(crime => {
                  const crimeType = crime.primaryCrimeType || crime.crimeType;
                  return `
                    <div class="crime-card relative pl-4 py-2.5 rounded-lg transition cursor-pointer group" data-crime-slug="${escapeHtml(crime.slug)}" style="background:transparent" onmouseover="this.style.background='var(--ch-surface-hover)'" onmouseout="this.style.background='transparent'">
                      <div aria-hidden="true" class="absolute left-[-18px] top-4 w-2 h-2 rounded-full" style="background:var(--ch-border)"></div>
                      <div class="text-sm font-medium group-hover:text-rose-600 transition" style="color:var(--ch-text)">
                        ${escapeHtml(crime.headline)}
                      </div>
                      <div class="flex items-center gap-2 mt-1 text-xs" style="color:var(--ch-text-muted)">
                        <span class="px-1.5 py-0.5 rounded" style="background:var(--ch-pill-bg);color:var(--ch-pill-text)">${escapeHtml(crimeType)}</span>
                        <span>${escapeHtml(crime.area)}</span>
                      </div>
                    </div>
                  `;
                }).join('')}
              </div>
            </div>
          </div>
        </div>
      `;
    }

    // Attach accordion click listeners
    function attachAccordionListeners() {
      const headers = document.querySelectorAll('.accordion-header');

      headers.forEach(header => {
        header.addEventListener('click', () => {
          const accordion = header.closest('.date-accordion');
          const content = accordion?.querySelector('.accordion-content');
          const chevron = header.querySelector('.chevron');
          const title = header.querySelector('.accordion-title');
          const tapHint = header.querySelector('.tap-hint');
          const isExpanded = header.getAttribute('aria-expanded') === 'true';

          if (content && chevron && title && accordion) {
            if (isExpanded) {
              // Collapse
              header.setAttribute('aria-expanded', 'false');
              content.classList.remove('max-h-[10000px]', 'mt-3', 'px-3', 'pb-3');
              content.classList.add('max-h-0');
              chevron.classList.remove('rotate-90');
              header.style.borderColor = 'var(--ch-border)';
              title.style.color = 'var(--ch-text)';
              // Remove wrapper styling
              accordion.classList.remove('bg-slate-50/60', 'dark:bg-[hsl(0_0%_6%)]/60', 'border', 'border-rose-200', 'dark:border-rose-900/40');
              // Show tap hint
              if (tapHint) tapHint.classList.remove('hidden');
            } else {
              // Expand
              header.setAttribute('aria-expanded', 'true');
              content.classList.add('max-h-[10000px]', 'mt-3', 'px-3', 'pb-3');
              content.classList.remove('max-h-0');
              chevron.classList.add('rotate-90');
              header.style.borderColor = '#e11d48';
              title.style.color = '#e11d48';
              // Add wrapper styling
              accordion.classList.add('bg-slate-50/60', 'dark:bg-[hsl(0_0%_6%)]/60', 'border', 'border-rose-200', 'dark:border-rose-900/40');
              // Hide tap hint
              if (tapHint) tapHint.classList.add('hidden');
            }
          }
        });
      });
    }

    // Update results count
    function updateResultsCount() {
      const showing = Math.min(currentPage * perPage, filteredCrimes.length);
      document.getElementById('resultsShowing').textContent = showing;
      document.getElementById('resultsTotal').textContent = filteredCrimes.length;
    }


    // Apply button highlight state
    const applyBtn = document.getElementById('applyFilters');

    function highlightApplyBtn() {
      applyBtn.style.backgroundColor = '#e11d48';
      applyBtn.style.color = '#fff';
      applyBtn.style.borderColor = '#e11d48';
    }

    function unhighlightApplyBtn() {
      applyBtn.style.backgroundColor = '';
      applyBtn.style.color = '';
      applyBtn.style.borderColor = '';
    }

    // Inline filter indicator (Hero button state + Clear link)
    const filtersBtnEl = document.getElementById('filtersBtn');
    const filtersBtnText = document.getElementById('filtersBtnText');
    const clearFiltersInline = document.getElementById('clearFiltersInline');

    function showFilterActive() {
      filtersBtnText.textContent = 'Filters Active â€º';
      filtersBtnEl.style.borderColor = '#e11d48';
      filtersBtnEl.style.color = '#e11d48';
      filtersBtnEl.style.backgroundColor = 'color-mix(in srgb, #e11d48 10%, transparent)';
      clearFiltersInline.classList.remove('hidden');
    }

    function hideFilterActive() {
      filtersBtnText.textContent = 'Filters â€º';
      filtersBtnEl.style.borderColor = '';
      filtersBtnEl.style.color = '';
      filtersBtnEl.style.backgroundColor = '';
      clearFiltersInline.classList.add('hidden');
    }

    // Shared clear filters logic
    function clearAllFilters() {
      document.getElementById('dateFrom').value = '';
      document.getElementById('dateTo').value = '';
      document.getElementById('crimeType').value = '';
      document.getElementById('area').value = '';
      applyFilters();
      unhighlightApplyBtn();
      hideFilterActive();
    }

    // Update inline indicator based on current filter state
    function syncFilterIndicator() {
      if (isFiltered) {
        highlightApplyBtn();
        showFilterActive();
      } else {
        unhighlightApplyBtn();
        hideFilterActive();
      }
    }

    // Event listeners
    document.getElementById('dateFrom').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('dateTo').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('crimeType').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('area').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });

    document.getElementById('clearFilters').addEventListener('click', clearAllFilters);
    clearFiltersInline.addEventListener('click', clearAllFilters);

    applyBtn.addEventListener('click', closeFiltersTray);

    document.getElementById('loadMore').addEventListener('click', () => {
      currentPage++;
      renderCrimes();
      updateResultsCount();
    });

    // Initial render - don't re-render (server already rendered first 30 cards)
    // Only update the count and set up load more button visibility
    updateResultsCount();

    // Check if Load More button should be visible
    const loadMore = document.getElementById('loadMore');
    if (filteredCrimes.length <= perPage) {
      loadMore.style.display = 'none';
    } else {
      loadMore.style.display = 'block';
    }

    // Attach accordion listeners to initial server-rendered accordions
    attachAccordionListeners();

    // Event delegation for crime card clicks
    const crimeAccordions = document.getElementById('crimeAccordions');
    if (crimeAccordions) {
      crimeAccordions.addEventListener('click', (e) => {
        // Don't open modal if clicking on a link
        if (e.target.closest('a')) {
          return;
        }

        const card = e.target.closest('.crime-card');
        if (card) {
          e.preventDefault();
          const slug = card.dataset.crimeSlug;
          const crime = allCrimes.find(c => c.slug === slug);
          if (crime && window.openCrimeModal) {
            window.openCrimeModal(crime);
          }
        }
      });
    }

    // Filters Tray Controls
    const filtersBtn = document.getElementById('filtersBtn');
    const filtersTray = document.getElementById('filtersTray');
    const filtersTrayContent = document.getElementById('filtersTrayContent');
    const filtersBackdrop = document.getElementById('filtersBackdrop');
    const closeFiltersBtn = document.getElementById('closeFiltersBtn');

    function openFiltersTray() {
      filtersTray.classList.remove('pointer-events-none');
      filtersBackdrop.classList.remove('pointer-events-none');
      setTimeout(() => {
        filtersBackdrop.classList.remove('opacity-0');
        filtersTrayContent.classList.remove('translate-x-full');
      }, 10);
    }

    function closeFiltersTray() {
      filtersBackdrop.classList.add('opacity-0');
      filtersTrayContent.classList.add('translate-x-full');
      setTimeout(() => {
        filtersTray.classList.add('pointer-events-none');
        filtersBackdrop.classList.add('pointer-events-none');
      }, 300);
    }

    if (filtersBtn) {
      filtersBtn.addEventListener('click', openFiltersTray);
    }

    if (closeFiltersBtn) {
      closeFiltersBtn.addEventListener('click', closeFiltersTray);
    }

    if (filtersBackdrop) {
      filtersBackdrop.addEventListener('click', closeFiltersTray);
    }

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !filtersTray.classList.contains('pointer-events-none')) {
        closeFiltersTray();
      }
    });
  </script>

