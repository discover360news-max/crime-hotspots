---
/**
 * Trinidad & Tobago Headlines Page
 * Shows all crime headlines with filters (Area, Crime Type, Date)
 */

// Keep headlines static (pre-rendered at build time)
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Hero from '../../components/Hero.astro';
import CrimeCard from '../../components/CrimeCard.astro';
import DateAccordion from '../../components/DateAccordion.astro';
import SiteNotificationBanner from '../../components/SiteNotificationBanner.astro';
import BlogRotatingBanner from '../../components/BlogRotatingBanner.astro';
import { getTrinidadCrimes, type Crime } from '../../lib/crimeData';
import { dataUpdateNotice } from '../../config/siteNotifications';
import { loadAreaAliases, getLocalName } from '../../lib/areaAliases';
import { getCountryName } from '../../data/countries';
import { routes, buildRoute } from '../../config/routes';

// Fetch all crimes (server-side) - include all years for filtering
const allCrimes = await getTrinidadCrimes();

// Load area aliases for tooltips
const areaAliases = await loadAreaAliases();

// Get available years for filters
const availableYears = [...new Set(allCrimes.map(c => c.year))].sort((a, b) => b - a);
const currentYear = availableYears[0];

console.log(`ðŸ“° Headlines loaded ${allCrimes.length} total crimes (${availableYears.join(', ')})`);

// Get unique areas and crime types for filters (from all years)
const areas = [...new Set(allCrimes.map(c => c.area).filter(Boolean))].sort();
const crimeTypes = [...new Set(allCrimes.map(c => c.crimeType).filter(Boolean))].sort();

// Group crimes by date for initial render (first 30 crimes)
const initialCrimes = allCrimes.slice(0, 30);
const crimesByDate = new Map<string, Crime[]>();

initialCrimes.forEach(crime => {
  const dateKey = crime.date; // YYYY-MM-DD format
  if (!crimesByDate.has(dateKey)) {
    crimesByDate.set(dateKey, []);
  }
  crimesByDate.get(dateKey)!.push(crime);
});

// Sort dates descending (most recent first)
const sortedDates = Array.from(crimesByDate.keys()).sort((a, b) =>
  new Date(b).getTime() - new Date(a).getTime()
);

// Helper function to calculate victim count
function calculateVictimCount(crimes: Crime[]): number {
  return crimes.reduce((total, crime) => {
    const victimCount = crime.victimCount && crime.victimCount > 0 ? crime.victimCount : 1;
    return total + victimCount;
  }, 0);
}

// Most recent crime date for freshness indicator
const latestCrimeDate = allCrimes[0]?.dateObj ?? new Date();
const freshnessText = latestCrimeDate.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });

// SEO
const title = `Trinidad & Tobago Crime Headlines â€” Latest Reports`;
const description = `Trinidad & Tobago crime headlines updated daily. Filter incidents (Murder, Robbery, etc.) by area and date, sourced from Guardian, Express, and Newsday.`;

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', href: routes.home },
  { label: getCountryName('tt'), href: routes.trinidad.dashboard },
  { label: 'Headlines' }
];
---

<Layout title={title} description={description} includeTurnstile={true}>
  <!-- Breadcrumbs (Above Hero) -->
  <div class="w-full max-w-6xl mx-auto px-4 sm:px-6 pt-4">
    <Breadcrumbs items={breadcrumbs} />
  </div>

  <!-- Hero Section -->
  <Hero
    title="Trinidad & Tobago Crime Headlines"
    subtitle="Latest crime reports from all years. Filter incidents by area, crime type, and date."
    compact={true}
    primaryCTA={{
      text: "Dashboard",
      href: routes.trinidad.dashboard,
      icon: "dashboard"
    }}
  >
    <div class="flex items-center gap-2">
      <button
        id="filtersBtn"
        class="px-4 py-1.5 min-h-[22px] inline-flex items-center justify-center border-2 border-slate-300 text-slate-700 hover:border-rose-600 hover:text-rose-600 active:bg-rose-50 rounded-lg transition font-medium text-xs whitespace-nowrap"
      >
        <span id="filtersBtnText">Filters â€º</span>
      </button>
      <button
        id="clearFiltersInline"
        class="hidden text-xs text-rose-600 hover:text-rose-700 font-medium whitespace-nowrap transition"
      >
        Clear
      </button>
    </div>
  </Hero>

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-5" data-pagefind-ignore>

    <!-- Site Notification Banner -->
    <SiteNotificationBanner notification={dataUpdateNotice} />

    <!-- Results Count + Data Freshness -->
    <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-300 to-transparent mb-3"></div>
    <div class="mb-3 text-xs flex flex-wrap items-center justify-between gap-y-1.5">
      <div class="text-rose-600">
        Showing <span id="resultsShowing">{Math.min(30, allCrimes.length)}</span> of all <a href={routes.trinidad.archive} class="border-b border-dotted border-rose-600 hover:border-rose-700 hover:text-rose-700 transition"><span id="resultsTotal">{allCrimes.length}</span></a> listed crimes
      </div>
      <span class="text-slate-400 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        Data as of {freshnessText}
      </span>
      <div class="basis-full sm:basis-auto">
        <a href={routes.trinidad.archive} class="text-slate-400 border-b border-dotted border-slate-400 hover:text-rose-600 hover:border-rose-600 transition">View Archive</a>
      </div>
    </div>
    <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-300 to-transparent mb-6"></div>

    <!-- Blog Rotating Banner -->
    <BlogRotatingBanner country="tt" limit={3} />

    <!-- Crime Accordions by Date -->
    <div id="crimeAccordions">
      {sortedDates.map((date, index) => {
        const crimes = crimesByDate.get(date)!;
        const incidentCount = crimes.length;
        const victimCount = calculateVictimCount(crimes);
        const isExpanded = index === 0;
        const formattedDate = new Date(date).toLocaleDateString('en-US', {
          weekday: 'long',
          month: 'long',
          day: 'numeric',
          year: 'numeric'
        });

        return (
          <div class="date-accordion mb-4" data-date={date}>
            <button
              class={`accordion-header w-full px-4 py-3 bg-white/70 backdrop-blur-md rounded-lg hover:bg-white/90 transition flex items-center justify-between group ${isExpanded ? 'border border-rose-600' : 'border border-slate-200'}`}
              aria-expanded={isExpanded}
            >
              <div class="flex items-center gap-3">
                <svg
                  class={`chevron w-5 h-5 text-slate-400 transition-transform duration-200 ${isExpanded ? 'rotate-90' : ''}`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>

                <div class="text-left">
                  <h3 class={`accordion-title text-small font-semibold ${isExpanded ? 'text-rose-600' : 'text-slate-700'}`}>{formattedDate}</h3>
                  <p class="text-xs text-slate-500">{incidentCount} {incidentCount === 1 ? 'incident' : 'incidents'} affecting {victimCount} {victimCount === 1 ? 'victim' : 'victims'}</p>
                </div>
              </div>

              <span class="px-3 py-1 rounded-full bg-rose-100 text-rose-600 text-xs font-medium">
                {incidentCount}
              </span>
            </button>

            <div class={`accordion-content overflow-hidden transition-all duration-300 ${isExpanded ? 'max-h-[10000px] mt-3' : 'max-h-0'}`}>
              <!-- Mobile/Tablet Timeline View (single column with timeline) -->
              <div class="relative pl-8 pb-4 sm:hidden">
                {/* Vertical dotted line */}
                <div class="absolute left-3 top-0 bottom-4 w-px border-l-2 border-dotted border-slate-300"></div>

                {/* Crime cards with timeline dots */}
                <div class="space-y-4">
                  {crimes.map(crime => {
                    const localName = getLocalName(areaAliases, crime.area);
                    return (
                      <div class="relative">
                        {/* Timeline dot (filled red circle) - small dot at top of card */}
                        <div class="absolute -left-[23px] top-4 w-1.5 h-1.5 rounded-full bg-rose-600"></div>
                        <CrimeCard crime={crime} localName={localName} />
                      </div>
                    );
                  })}
                </div>
              </div>

              <!-- Desktop Grid View (no timeline) -->
              <div class="hidden sm:grid gap-4 sm:grid-cols-2 lg:grid-cols-3 pb-4">
                {crimes.map(crime => {
                  const localName = getLocalName(areaAliases, crime.area);
                  return <CrimeCard crime={crime} localName={localName} />;
                })}
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Load More -->
    <div class="mt-8 text-center">
      <button
        id="loadMore"
        class="px-6 py-2.5 bg-rose-600 text-white rounded-lg hover:bg-rose-700 active:bg-rose-800 transition font-medium text-xs"
      >
        Load More
      </button>
    </div>
  </main>

  <!-- Filters Tray -->
  <div id="filtersTray" class="fixed inset-0 z-50 pointer-events-none overflow-hidden">
    <!-- Backdrop -->
    <div id="filtersBackdrop" class="absolute inset-0 bg-black/50 backdrop-blur-sm opacity-0 transition-opacity duration-300 pointer-events-none"></div>

    <!-- Tray Content -->
    <div id="filtersTrayContent" class="absolute right-0 top-0 h-full w-80 bg-white/80 backdrop-blur-lg rounded-l-2xl shadow-2xl transform translate-x-full transition-transform duration-300 pointer-events-auto">
      <div class="p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-lg font-bold text-slate-700">Filters</h2>
          <button id="closeFiltersBtn" class="text-slate-400 hover:text-slate-600 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Filter Options -->
        <div class="space-y-4">
          <!-- Date Range -->
          <div>
            <label for="dateFrom" class="block text-sm font-medium text-slate-700 mb-2">From Date</label>
            <input
              type="date"
              id="dateFrom"
              class="w-full px-4 py-2 border border-slate-300 text-slate-500 rounded-lg hover:bg-slate-50 transition font-medium text-xs bg-white/50"
            />
          </div>

          <div>
            <label for="dateTo" class="block text-sm font-medium text-slate-700 mb-2">To Date</label>
            <input
              type="date"
              id="dateTo"
              class="w-full px-4 py-2 border border-slate-300 text-slate-500 rounded-lg hover:bg-slate-50 transition font-medium text-xs bg-white/50"
            />
          </div>

          <!-- Crime Type -->
          <div>
            <label for="crimeType" class="block text-sm font-medium text-slate-700 mb-2">Crime Type</label>
            <select
              id="crimeType"
              class="w-full px-4 py-2 border border-slate-300 text-slate-500 rounded-lg hover:bg-slate-50 transition font-medium text-xs bg-white/50"
            >
              <option value="">All Types</option>
              {crimeTypes.map(type => (
                <option value={type}>{type}</option>
              ))}
            </select>
          </div>

          <!-- Area -->
          <div>
            <label for="area" class="block text-sm font-medium text-slate-700 mb-2">Area</label>
            <select
              id="area"
              class="w-full px-4 py-2 border border-slate-300 text-slate-500 rounded-lg hover:bg-slate-50 transition font-medium text-xs bg-white/50"
            >
              <option value="">All Areas</option>
              {areas.map(area => (
                <option value={area}>{area}</option>
              ))}
            </select>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-2 pt-2">
            <button
              id="clearFilters"
              class="flex-1 px-4 py-2 text-rose-600 hover:text-rose-700 active:text-rose-800 transition font-medium text-xs"
            >
              Clear Filters
            </button>
            <button
              id="applyFilters"
              class="flex-1 px-4 py-2 border-2 border-slate-300 text-slate-500 rounded-lg transition-all duration-200 font-medium text-xs"
            >
              Apply
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Client-side filtering script -->
  <script define:vars={{ allCrimes, areaAliases: Object.fromEntries(areaAliases) }}>
    // Expose crimes data globally for modal safety context
    window.__crimesData = allCrimes;

    // XSS Prevention: Escape HTML special characters
    function escapeHtml(str) {
      if (str == null) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    }

    // XSS Prevention: Sanitize URLs (only allow http/https/relative)
    function sanitizeUrl(url) {
      if (url == null) return '';
      const trimmed = String(url).trim();
      if (trimmed.startsWith('/')) return trimmed;
      if (trimmed.startsWith('http://') || trimmed.startsWith('https://')) return trimmed;
      return ''; // Block javascript:, data:, etc.
    }

    let currentPage = 1;
    const perPage = 30;
    let filteredCrimes = [...allCrimes];
    let isFiltered = false;

    // Filter function
    function applyFilters() {
      const dateFrom = document.getElementById('dateFrom').value;
      const dateTo = document.getElementById('dateTo').value;
      const crimeType = document.getElementById('crimeType').value;
      const area = document.getElementById('area').value;

      // Check if any filter is active
      isFiltered = !!(dateFrom || dateTo || crimeType || area);

      filteredCrimes = allCrimes.filter(crime => {
        const crimeDate = new Date(crime.date);

        // Date filters
        if (dateFrom && crimeDate < new Date(dateFrom)) return false;
        if (dateTo && crimeDate > new Date(dateTo)) return false;

        // Crime type filter
        if (crimeType && crime.crimeType !== crimeType) return false;

        // Area filter
        if (area && crime.area !== area) return false;

        return true;
      });

      // Reset to page 1
      currentPage = 1;
      renderCrimes();
      updateResultsCount();
    }

    // Render crimes (accordion mode when no filters, grid mode when filtered)
    function renderCrimes() {
      const container = document.getElementById('crimeAccordions');
      const loadMore = document.getElementById('loadMore');

      // Empty state when filters return no results
      if (filteredCrimes.length === 0) {
        container.innerHTML = `
          <div class="bg-slate-50 rounded-lg border border-slate-200 p-8 text-center">
            <svg class="w-12 h-12 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <p class="text-sm text-slate-500 mb-2">No crimes match your filters.</p>
            <p class="text-xs text-slate-400">Try broadening your date range, area, or crime type.</p>
          </div>`;
        loadMore.style.display = 'none';
        return;
      }

      const crimes = filteredCrimes.slice(0, currentPage * perPage);

      if (isFiltered) {
        // FILTERED MODE: Show flat grid (no accordions)
        container.innerHTML = `
          <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            ${crimes.map(crime => createCrimeCardHTML(crime)).join('')}
          </div>
        `;
      } else {
        // ACCORDION MODE: Group by date
        const crimesByDate = new Map();

        crimes.forEach(crime => {
          const dateKey = crime.date;
          if (!crimesByDate.has(dateKey)) {
            crimesByDate.set(dateKey, []);
          }
          crimesByDate.get(dateKey).push(crime);
        });

        // Sort dates descending
        const sortedDates = Array.from(crimesByDate.keys()).sort((a, b) =>
          new Date(b).getTime() - new Date(a).getTime()
        );

        // Render accordions
        container.innerHTML = sortedDates.map((date, index) => {
          const dateCrimes = crimesByDate.get(date);
          const isExpanded = index === 0;
          return createAccordionHTML(date, dateCrimes, isExpanded);
        }).join('');

        // Reattach accordion event listeners
        attachAccordionListeners();
      }

      // Show/hide load more button
      if (crimes.length >= filteredCrimes.length) {
        loadMore.style.display = 'none';
      } else {
        loadMore.style.display = 'block';
      }

      // Dispatch event to re-initialize area tooltips
      window.dispatchEvent(new CustomEvent('crimesRendered'));
    }

    // Helper to render area name with tooltip (if local name exists)
    function renderAreaName(area) {
      const localName = areaAliases[area];
      const safeArea = escapeHtml(area);

      // If no local name or same as area, show plain text
      if (!localName || localName === area) {
        return `<span>${safeArea}</span>`;
      }

      // Show area with tooltip trigger (tooltip appended to body via JS)
      return `<span class="area-tooltip-trigger inline-block border-b-2 border-dotted border-slate-400 hover:border-rose-600 cursor-help transition-colors" data-area="${safeArea}" data-local-name="${escapeHtml(localName)}">${safeArea}</span>`;
    }

    // Create crime card HTML
    function createCrimeCardHTML(crime) {
      const safeSlug = encodeURIComponent(crime.slug);
      const safeUrl = sanitizeUrl(crime.url);
      return `
        <article class="crime-card bg-white/70 backdrop-blur-md rounded-xl shadow-md border border-slate-100 p-4 hover:shadow-lg transition cursor-pointer group" data-crime-slug="${escapeHtml(crime.slug)}">
          <div class="flex items-start justify-between mb-3">
            <span class="inline-block px-3 py-1 rounded-full text-white text-xs font-medium opacity-70" style="background-color: ${getCrimeColorHex(crime.crimeType)}">
              ${escapeHtml(crime.crimeType)}
            </span>
            <span class="text-xs text-slate-500">
              ${escapeHtml(formatDate(crime.date))}
            </span>
          </div>

          <h3 class="text-small font-semibold text-slate-700 mb-2">
            ${escapeHtml(crime.headline)}
          </h3>

          <p class="text-xs text-slate-500 mb-3 flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            ${renderAreaName(crime.area)}
          </p>

          <div class="flex items-center justify-between pt-3 border-t border-slate-200">
            <!-- Keep crime route in sync with src/config/routes.ts -->
            <a href="/trinidad/crime/${safeSlug}/" class="text-xs text-rose-600 hover:text-rose-700 font-medium flex items-center gap-1">
              View Details
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>

            ${safeUrl ? `<a href="${safeUrl}" target="_blank" rel="noopener" class="text-xs text-slate-500 hover:text-slate-700 flex items-center gap-1" title="Read original article">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Source
            </a>` : ''}
          </div>
        </article>
      `;
    }

    // Calculate victim count for a group of crimes
    function calculateVictimCount(crimes) {
      return crimes.reduce((total, crime) => {
        const victimCount = crime.victimCount && crime.victimCount > 0 ? crime.victimCount : 1;
        return total + victimCount;
      }, 0);
    }

    // Create accordion HTML
    function createAccordionHTML(date, crimes, isExpanded) {
      const formattedDate = new Date(date).toLocaleDateString('en-US', {
        weekday: 'long',
        month: 'long',
        day: 'numeric',
        year: 'numeric'
      });

      const incidentCount = crimes.length;
      const victimCount = calculateVictimCount(crimes);
      const expandedClass = isExpanded ? 'max-h-[10000px] mt-3' : 'max-h-0';
      const chevronClass = isExpanded ? 'rotate-90' : '';
      const borderClass = isExpanded ? 'border border-rose-600' : 'border border-slate-200';
      const textClass = isExpanded ? 'text-rose-600' : 'text-slate-700';

      return `
        <div class="date-accordion mb-4" data-date="${escapeHtml(date)}">
          <button
            class="accordion-header w-full px-4 py-3 bg-white/70 backdrop-blur-md rounded-lg hover:bg-white/90 transition flex items-center justify-between group ${borderClass}"
            aria-expanded="${isExpanded}"
          >
            <div class="flex items-center gap-3">
              <svg
                class="chevron w-5 h-5 text-slate-400 transition-transform duration-200 ${chevronClass}"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>

              <div class="text-left">
                <h3 class="accordion-title text-small font-semibold ${textClass}">${escapeHtml(formattedDate)}</h3>
                <p class="text-xs text-slate-500">${incidentCount} ${incidentCount === 1 ? 'incident' : 'incidents'} affecting ${victimCount} ${victimCount === 1 ? 'victim' : 'victims'}</p>
              </div>
            </div>

            <span class="px-3 py-1 rounded-full bg-rose-100 text-rose-600 text-xs font-medium">
              ${incidentCount}
            </span>
          </button>

          <div class="accordion-content overflow-hidden transition-all duration-300 ${expandedClass}">
            <!-- Mobile/Tablet Timeline View (single column with timeline) -->
            <div class="relative pl-8 pb-4 sm:hidden">
              <!-- Vertical dotted line -->
              <div class="absolute left-3 top-0 bottom-4 w-px border-l-2 border-dotted border-slate-300"></div>

              <!-- Crime cards with timeline dots -->
              <div class="space-y-4">
                ${crimes.map(crime => `
                  <div class="relative">
                    <!-- Timeline dot (filled red circle) - small dot at top of card -->
                    <div class="absolute -left-[23px] top-4 w-1.5 h-1.5 rounded-full bg-rose-600"></div>
                    ${createCrimeCardHTML(crime)}
                  </div>
                `).join('')}
              </div>
            </div>

            <!-- Desktop Grid View (no timeline) -->
            <div class="hidden sm:grid gap-4 sm:grid-cols-2 lg:grid-cols-3 pb-4">
              ${crimes.map(crime => createCrimeCardHTML(crime)).join('')}
            </div>
          </div>
        </div>
      `;
    }

    // Attach accordion click listeners
    function attachAccordionListeners() {
      const headers = document.querySelectorAll('.accordion-header');

      headers.forEach(header => {
        header.addEventListener('click', () => {
          const accordion = header.closest('.date-accordion');
          const content = accordion?.querySelector('.accordion-content');
          const chevron = header.querySelector('.chevron');
          const title = header.querySelector('.accordion-title');
          const isExpanded = header.getAttribute('aria-expanded') === 'true';

          if (content && chevron && title) {
            if (isExpanded) {
              // Collapse
              header.setAttribute('aria-expanded', 'false');
              content.classList.remove('max-h-[10000px]', 'mt-3');
              content.classList.add('max-h-0');
              chevron.classList.remove('rotate-90');
              // Reset to grey border and text
              header.classList.remove('border-rose-600');
              header.classList.add('border-slate-200');
              title.classList.remove('text-rose-600');
              title.classList.add('text-slate-700');
            } else {
              // Expand
              header.setAttribute('aria-expanded', 'true');
              content.classList.add('max-h-[10000px]', 'mt-3');
              content.classList.remove('max-h-0');
              chevron.classList.add('rotate-90');
              // Set to red border and text
              header.classList.remove('border-slate-200');
              header.classList.add('border-rose-600');
              title.classList.remove('text-slate-700');
              title.classList.add('text-rose-600');
            }
          }
        });
      });
    }

    // Update results count
    function updateResultsCount() {
      const showing = Math.min(currentPage * perPage, filteredCrimes.length);
      document.getElementById('resultsShowing').textContent = showing;
      document.getElementById('resultsTotal').textContent = filteredCrimes.length;
    }

    // Helper: Get crime color (hex for inline styles)
    function getCrimeColorHex(type) {
      const colors = {
        'Murder': '#e11d48',      // rose-600
        'Shooting': '#dc2626',    // red-600
        'Robbery': '#f97316',     // orange-500
        'Burglary': '#eab308',    // yellow-500
        'Theft': '#06b6d4',       // cyan-500
        'Home Invasion': '#9333ea', // purple-600
        'Kidnapping': '#ec4899',  // pink-600
        'Sexual Assault': '#c026d3', // fuchsia-600
        'Assault': '#8b5cf6',     // violet-500
        'Seizures': '#3b82f6'     // blue-500
      };
      return colors[type] || '#64748b'; // slate-500
    }

    // Helper: Format date
    function formatDate(dateStr) {
      const date = new Date(dateStr);
      return date.toLocaleDateString('en-US', {
        month: 'short',
        day: 'numeric',
        year: 'numeric'
      });
    }

    // Filter toggle for mobile
    const filterToggle = document.getElementById('filterToggle');
    const filtersContainer = document.getElementById('filtersContainer');
    const filterToggleIcon = document.getElementById('filterToggleIcon');

    if (filterToggle) {
      filterToggle.addEventListener('click', () => {
        const isHidden = filtersContainer.classList.contains('hidden');

        if (isHidden) {
          filtersContainer.classList.remove('hidden');
          filterToggleIcon.style.transform = 'rotate(180deg)';
        } else {
          filtersContainer.classList.add('hidden');
          filterToggleIcon.style.transform = 'rotate(0deg)';
        }
      });
    }

    // Apply button highlight state
    const applyBtn = document.getElementById('applyFilters');

    function highlightApplyBtn() {
      applyBtn.classList.remove('border-slate-300', 'text-slate-500');
      applyBtn.classList.add('bg-rose-600', 'text-white', 'border-rose-600', 'hover:bg-rose-700');
    }

    function unhighlightApplyBtn() {
      applyBtn.classList.remove('bg-rose-600', 'text-white', 'border-rose-600', 'hover:bg-rose-700');
      applyBtn.classList.add('border-slate-300', 'text-slate-500');
    }

    // Inline filter indicator (Hero button state + Clear link)
    const filtersBtnEl = document.getElementById('filtersBtn');
    const filtersBtnText = document.getElementById('filtersBtnText');
    const clearFiltersInline = document.getElementById('clearFiltersInline');

    function showFilterActive() {
      filtersBtnText.textContent = 'Filters Active â€º';
      filtersBtnEl.classList.remove('border-slate-300', 'text-slate-700');
      filtersBtnEl.classList.add('border-rose-600', 'text-rose-600', 'bg-rose-50');
      clearFiltersInline.classList.remove('hidden');
    }

    function hideFilterActive() {
      filtersBtnText.textContent = 'Filters â€º';
      filtersBtnEl.classList.remove('border-rose-600', 'text-rose-600', 'bg-rose-50');
      filtersBtnEl.classList.add('border-slate-300', 'text-slate-700');
      clearFiltersInline.classList.add('hidden');
    }

    // Shared clear filters logic
    function clearAllFilters() {
      document.getElementById('dateFrom').value = '';
      document.getElementById('dateTo').value = '';
      document.getElementById('crimeType').value = '';
      document.getElementById('area').value = '';
      applyFilters();
      unhighlightApplyBtn();
      hideFilterActive();
    }

    // Update inline indicator based on current filter state
    function syncFilterIndicator() {
      if (isFiltered) {
        highlightApplyBtn();
        showFilterActive();
      } else {
        unhighlightApplyBtn();
        hideFilterActive();
      }
    }

    // Event listeners
    document.getElementById('dateFrom').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('dateTo').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('crimeType').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('area').addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });

    document.getElementById('clearFilters').addEventListener('click', clearAllFilters);
    clearFiltersInline.addEventListener('click', clearAllFilters);

    applyBtn.addEventListener('click', closeFiltersTray);

    document.getElementById('loadMore').addEventListener('click', () => {
      currentPage++;
      renderCrimes();
      updateResultsCount();
    });

    // Initial render - don't re-render (server already rendered first 30 cards)
    // Only update the count and set up load more button visibility
    updateResultsCount();

    // Check if Load More button should be visible
    const loadMore = document.getElementById('loadMore');
    if (filteredCrimes.length <= perPage) {
      loadMore.style.display = 'none';
    } else {
      loadMore.style.display = 'block';
    }

    // Attach accordion listeners to initial server-rendered accordions
    attachAccordionListeners();

    // Event delegation for crime card clicks
    const crimeAccordions = document.getElementById('crimeAccordions');
    if (crimeAccordions) {
      crimeAccordions.addEventListener('click', (e) => {
        // Don't open modal if clicking on a link
        if (e.target.closest('a')) {
          return;
        }

        const card = e.target.closest('.crime-card');
        if (card) {
          e.preventDefault();
          const slug = card.dataset.crimeSlug;
          const crime = allCrimes.find(c => c.slug === slug);
          if (crime && window.openCrimeModal) {
            window.openCrimeModal(crime);
          }
        }
      });
    }

    // Filters Tray Controls
    const filtersBtn = document.getElementById('filtersBtn');
    const filtersTray = document.getElementById('filtersTray');
    const filtersTrayContent = document.getElementById('filtersTrayContent');
    const filtersBackdrop = document.getElementById('filtersBackdrop');
    const closeFiltersBtn = document.getElementById('closeFiltersBtn');

    function openFiltersTray() {
      filtersTray.classList.remove('pointer-events-none');
      filtersBackdrop.classList.remove('pointer-events-none');
      setTimeout(() => {
        filtersBackdrop.classList.remove('opacity-0');
        filtersTrayContent.classList.remove('translate-x-full');
      }, 10);
    }

    function closeFiltersTray() {
      filtersBackdrop.classList.add('opacity-0');
      filtersTrayContent.classList.add('translate-x-full');
      setTimeout(() => {
        filtersTray.classList.add('pointer-events-none');
        filtersBackdrop.classList.add('pointer-events-none');
      }, 300);
    }

    if (filtersBtn) {
      filtersBtn.addEventListener('click', openFiltersTray);
    }

    if (closeFiltersBtn) {
      closeFiltersBtn.addEventListener('click', closeFiltersTray);
    }

    if (filtersBackdrop) {
      filtersBackdrop.addEventListener('click', closeFiltersTray);
    }

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !filtersTray.classList.contains('pointer-events-none')) {
        closeFiltersTray();
      }
    });
  </script>
</Layout>
