---
/**
 * Trinidad & Tobago Headlines Page
 * Shows all crime headlines with filters (Area, Crime Type, Date)
 */

// Keep headlines static (pre-rendered at build time)
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Hero from '../../components/Hero.astro';
import SiteNotificationBanner from '../../components/SiteNotificationBanner.astro';
import BlogRotatingBanner from '../../components/BlogRotatingBanner.astro';
import { getTrinidadCrimes, type Crime } from '../../lib/crimeData';
import { dataUpdateNotice } from '../../config/siteNotifications';
import { getCountryName } from '../../data/countries';
import { routes } from '../../config/routes';

// Fetch all crimes (server-side) - include all years for filtering
const allCrimes = await getTrinidadCrimes();

// Get available years for filters
const availableYears = [...new Set(allCrimes.map(c => c.year))].sort((a, b) => b - a);
const currentYear = availableYears[0];

console.log(`ðŸ“° Headlines loaded ${allCrimes.length} total crimes (${availableYears.join(', ')})`);

// Get unique areas, regions, and crime types for filters (from all years)
const areas = [...new Set(allCrimes.map(c => c.area).filter(Boolean))].sort();
const regions = [...new Set(allCrimes.map(c => c.region).filter(Boolean))].sort();
const crimeTypes = [...new Set(allCrimes.map(c => c.crimeType).filter(Boolean))].sort();

// Build region â†’ areas mapping for cascading area dropdown
const regionToAreas: Record<string, string[]> = {};
allCrimes.forEach(c => {
  if (c.region && c.area) {
    if (!regionToAreas[c.region]) regionToAreas[c.region] = [];
    if (!regionToAreas[c.region].includes(c.area)) regionToAreas[c.region].push(c.area);
  }
});
Object.values(regionToAreas).forEach(arr => (arr as string[]).sort());

// Group crimes by date for initial render (first 30 crimes)
const initialCrimes = allCrimes.slice(0, 30);
const crimesByDate = new Map<string, Crime[]>();

initialCrimes.forEach(crime => {
  const dateKey = crime.date; // YYYY-MM-DD format
  if (!crimesByDate.has(dateKey)) {
    crimesByDate.set(dateKey, []);
  }
  crimesByDate.get(dateKey)!.push(crime);
});

// Sort dates descending (most recent first)
const sortedDates = Array.from(crimesByDate.keys()).sort((a, b) =>
  new Date(b).getTime() - new Date(a).getTime()
);

// Helper function to calculate victim count
function calculateVictimCount(crimes: Crime[]): number {
  return crimes.reduce((total, crime) => {
    const victimCount = crime.victimCount && crime.victimCount > 0 ? crime.victimCount : 1;
    return total + victimCount;
  }, 0);
}

// Most recent crime date for freshness indicator
const latestCrimeDate = allCrimes[0]?.dateObj ?? new Date();
const freshnessText = latestCrimeDate.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });

// SEO
const title = `Trinidad & Tobago Crime Headlines â€” Latest Reports`;
const description = `Trinidad & Tobago crime headlines updated daily. Filter incidents (Murder, Robbery, etc.) by area and date, sourced from Guardian, Express, and Newsday.`;

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', href: routes.home },
  { label: getCountryName('tt'), href: routes.trinidad.dashboard },
  { label: 'Headlines' }
];
---

<Layout title={title} description={description} includeTurnstile={true}>
  <!-- Hero Section -->
  <Hero
    title="Trinidad & Tobago Crime Headlines"
    subtitle="Browse the latest crime reports."
    compact={true}
    narrowContainer={true}
    freshness={`Data as of ${freshnessText}`}
    primaryCTA={{
      text: "Dashboard",
      href: routes.trinidad.dashboard,
      icon: "dashboard"
    }}
    secondaryCTA={{
      text: "Murder Count",
      href: routes.trinidad.murderCount
    }}
  >
    <Breadcrumbs items={breadcrumbs} slot="before" />
    <div class="flex items-center gap-2">
      <button
        id="filtersBtn"
        class="px-4 py-1.5 min-h-[22px] inline-flex items-center justify-center border-2 border-slate-300 dark:border-[hsl(0_0%_30%)] text-slate-700 dark:text-[hsl(0_0%_85%)] hover:border-rose-600 dark:hover:border-rose-500 hover:text-rose-600 dark:hover:text-rose-400 active:bg-rose-50 dark:active:bg-rose-950/40 rounded-lg transition font-medium text-xs whitespace-nowrap"
      >
        <span id="filtersBtnText">Filters â€º</span>
      </button>
      <button
        id="clearFiltersInline"
        class="hidden text-xs text-rose-600 hover:text-rose-700 font-medium whitespace-nowrap transition"
      >
        Clear
      </button>
    </div>
  </Hero>

  <main class="max-w-3xl mx-auto px-4 sm:px-6 py-5" data-pagefind-ignore>
    <div class="bg-white/70 dark:bg-[hsl(0_0%_8%_/_0.7)] backdrop-blur-md rounded-3xl shadow-md p-6 sm:p-8 border border-slate-100 dark:border-[hsl(0_0%_18%)]">

      <!-- Site Notification Banner -->
      <SiteNotificationBanner notification={dataUpdateNotice} />

      <!-- Results Count -->
      <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-300 dark:via-[hsl(0_0%_22%)] to-transparent mb-3"></div>
      <div class="mb-3 text-xs flex flex-wrap items-center justify-between gap-y-1.5">
        <div class="text-slate-400 dark:text-[hsl(0_0%_50%)]">
          Showing <span id="resultsShowing">{Math.min(30, allCrimes.length)}</span> of <a href={routes.trinidad.archive} class="border-b border-dotted border-slate-400 dark:border-[hsl(0_0%_40%)] hover:text-rose-600 hover:border-rose-600 transition"><span id="resultsTotal">{allCrimes.length}</span></a> listed crimes
        </div>
        <div class="basis-full sm:basis-auto">
          <a href={routes.trinidad.archive} class="text-slate-400 dark:text-[hsl(0_0%_50%)] border-b border-dotted border-slate-400 dark:border-[hsl(0_0%_40%)] hover:text-rose-600 hover:border-rose-600 transition">View Archive</a>
        </div>
      </div>
      <div class="w-full h-px bg-gradient-to-r from-transparent via-slate-300 dark:via-[hsl(0_0%_22%)] to-transparent mb-6"></div>

      <!-- Blog Rotating Banner -->
      <BlogRotatingBanner country="tt" limit={3} />

      <!-- Crime Accordions by Date -->
      <div id="crimeAccordions">
        {sortedDates.map((date, index) => {
          const crimes = crimesByDate.get(date)!;
          const incidentCount = crimes.length;
          const victimCount = calculateVictimCount(crimes);
          const isExpanded = index === 0;
          const formattedDate = new Date(date).toLocaleDateString('en-US', {
            weekday: 'long', month: 'long', day: 'numeric', year: 'numeric'
          });
          return (
            <div class="date-accordion mb-3" data-date={date}>
              <button
                class="da-header w-full px-4 py-3 bg-white dark:bg-[hsl(0_0%_10%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_18%)] hover:border-rose-300 dark:hover:border-rose-700 transition flex items-center justify-between group"
                aria-expanded={isExpanded ? 'true' : 'false'}
              >
                <div class="flex items-center gap-3">
                  <svg
                    class={`da-chevron w-4 h-4 text-slate-400 dark:text-[hsl(0_0%_55%)] transition-transform duration-200 flex-shrink-0 ${isExpanded ? 'rotate-90' : ''}`}
                    fill="none" stroke="currentColor" viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  <div class="text-left">
                    <h3 class="text-caption font-bold text-slate-700 dark:text-[hsl(0_0%_90%)] leading-snug">{formattedDate}</h3>
                    <p class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)]">{incidentCount} {incidentCount === 1 ? 'incident' : 'incidents'} Â· {victimCount} {victimCount === 1 ? 'victim' : 'victims'}</p>
                  </div>
                </div>
                <span class="px-2 py-0.5 rounded-full border border-slate-300 dark:border-[hsl(0_0%_30%)] text-slate-500 dark:text-[hsl(0_0%_55%)] text-caption font-medium">
                  {incidentCount}
                </span>
              </button>
              <div class={`da-content overflow-hidden${isExpanded ? ' is-open' : ''}`}>
                <div class="relative pl-7 py-2">
                  <div class="absolute left-3.5 top-0 bottom-0 w-px border-l-2 border-dotted border-slate-300 dark:border-[hsl(0_0%_25%)]"></div>
                  <div class="space-y-1">
                    {crimes.map(crime => (
                      <a
                        href={`/trinidad/crime/${crime.slug}/`}
                        class="crime-card relative pl-4 py-2.5 rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition group block"
                      >
                        <div aria-hidden="true" class="absolute left-[-18px] top-4 w-2 h-2 rounded-full bg-slate-300 dark:bg-[hsl(0_0%_35%)]"></div>
                        <div class="text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_80%)] group-hover:text-rose-600 transition">{crime.headline}</div>
                        <div class="flex items-center gap-2 mt-1 text-xs text-slate-400 dark:text-[hsl(0_0%_45%)]">
                          <span class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-[hsl(0_0%_15%)] text-slate-500 dark:text-[hsl(0_0%_60%)]">{crime.primaryCrimeType || crime.crimeType}</span>
                          <span>{crime.area}</span>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>

      <!-- Load More -->
      <div class="mt-8 text-center">
        <button
          id="loadMore"
          class="px-4 py-1.5 min-h-[22px] border-2 border-slate-300 dark:border-[hsl(0_0%_30%)] text-slate-700 dark:text-[hsl(0_0%_85%)] hover:border-rose-600 dark:hover:border-rose-500 hover:text-rose-600 dark:hover:text-rose-400 active:bg-rose-50 dark:active:bg-rose-950/40 rounded-lg transition font-medium text-xs whitespace-nowrap"
        >
          Load More
        </button>
      </div>

    </div>
  </main>

  <!-- Filters Tray -->
  <div id="filtersTray" class="fixed inset-0 z-50 pointer-events-none overflow-hidden">
    <div id="filtersBackdrop" class="absolute inset-0 bg-black/50 backdrop-blur-sm opacity-0 transition-opacity duration-300 pointer-events-none"></div>
    <div id="filtersTrayContent" class="absolute right-0 top-0 h-full max-w-[min(20rem,calc(100vw-2rem))] w-full bg-white/85 dark:bg-[hsl(0_0%_8%)]/90 backdrop-blur-lg rounded-l-2xl shadow-2xl transform translate-x-full transition-transform duration-300 pointer-events-auto overflow-y-auto">
      <div class="p-5">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-heading font-bold text-slate-700 dark:text-[hsl(0_0%_92%)] leading-tight">Filters</h2>
          <button id="closeFiltersBtn" class="text-slate-400 dark:text-[hsl(0_0%_50%)] hover:text-slate-600 dark:hover:text-[hsl(0_0%_75%)] transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <div class="space-y-4">
          <!-- Date Range -->
          <div>
            <label for="dateFrom" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">From Date</label>
            <input
              type="date"
              id="dateFrom"
              class="filter-date-input w-full px-4 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            />
          </div>
          <div>
            <label for="dateTo" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">To Date</label>
            <input
              type="date"
              id="dateTo"
              class="filter-date-input w-full px-4 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            />
          </div>

          <!-- Crime Type -->
          <div>
            <label for="crimeTypeFilter" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">Crime Type</label>
            <select
              id="crimeTypeFilter"
              class="filter-select w-full pl-4 pr-10 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            >
              <option value="">All Types</option>
              {crimeTypes.map(type => (
                <option value={type}>{type}</option>
              ))}
            </select>
          </div>

          <!-- Region -->
          <div>
            <label for="regionFilter" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">Region</label>
            <select
              id="regionFilter"
              class="filter-select w-full pl-4 pr-10 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            >
              <option value="">All Regions</option>
              {regions.map(region => (
                <option value={region}>{region}</option>
              ))}
            </select>
          </div>

          <!-- Area (cascades on region) -->
          <div>
            <label for="areaFilter" class="block text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_85%)] mb-2">Area</label>
            <select
              id="areaFilter"
              class="filter-select w-full pl-4 pr-10 py-2.5 border border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition font-medium text-xs bg-white/50 dark:bg-[hsl(0_0%_10%)]"
            >
              <option value="">All Areas</option>
              {areas.map(area => (
                <option value={area}>{area}</option>
              ))}
            </select>
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-2 pt-2">
            <button
              id="clearFilters"
              class="flex-1 px-4 py-2 text-rose-600 hover:text-rose-700 active:text-rose-800 transition font-medium text-xs"
            >
              Clear Filters
            </button>
            <button
              id="applyFilters"
              class="flex-1 px-4 py-2 border-2 border-slate-300 dark:border-[hsl(0_0%_22%)] text-slate-500 dark:text-[hsl(0_0%_55%)] rounded-lg transition-all duration-200 font-medium text-xs"
            >
              Apply
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

<style>
  :global(.da-content) {
    height: 0;
    transition: height 300ms ease, margin-top 200ms ease;
  }
  :global(.da-content.is-open) {
    height: auto;
    margin-top: 0.75rem;
  }
  .filter-date-input::-webkit-calendar-picker-indicator {
    padding: 2px;
    margin-right: 2px;
    cursor: pointer;
    opacity: 0.5;
  }
  .filter-date-input::-webkit-calendar-picker-indicator:hover {
    opacity: 0.8;
  }
</style>

<!-- Data only: expose to window for module script to read after SPA navigation -->
<script define:vars={{ allCrimes, regionToAreas, allAreas: areas }}>
  window.__hlData = { allCrimes, regionToAreas, allAreas };
</script>

<!-- Filter tray + filter logic: module script, re-runs callback on every navigation -->
<script>
  document.addEventListener('astro:page-load', () => {
    const { allCrimes, regionToAreas, allAreas } = (window as any).__hlData || {};
    if (!allCrimes) return;

    // â”€â”€ State â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    let currentPage = 1;
    const perPage = 30;
    let filteredCrimes = [...allCrimes];
    let isFiltered = false;

    // â”€â”€ Tray open/close â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    const filtersTray = document.getElementById('filtersTray')!;
    const filtersTrayContent = document.getElementById('filtersTrayContent')!;
    const filtersBackdrop = document.getElementById('filtersBackdrop')!;
    const filtersBtn = document.getElementById('filtersBtn')!;
    const closeFiltersBtn = document.getElementById('closeFiltersBtn')!;

    function openTray() {
      filtersTray.classList.remove('pointer-events-none');
      filtersBackdrop.classList.remove('pointer-events-none');
      setTimeout(() => {
        filtersBackdrop.classList.remove('opacity-0');
        filtersTrayContent.classList.remove('translate-x-full');
      }, 10);
    }

    function closeTray() {
      filtersBackdrop.classList.add('opacity-0');
      filtersTrayContent.classList.add('translate-x-full');
      setTimeout(() => {
        filtersTray.classList.add('pointer-events-none');
        filtersBackdrop.classList.add('pointer-events-none');
      }, 300);
    }

    if (filtersBtn) filtersBtn.addEventListener('click', openTray);
    if (closeFiltersBtn) closeFiltersBtn.addEventListener('click', closeTray);
    if (filtersBackdrop) filtersBackdrop.addEventListener('click', closeTray);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !filtersTray.classList.contains('pointer-events-none')) closeTray();
    });

    // â”€â”€ XSS helper â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function escapeHtml(str: any): string {
      if (str == null) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    }

    // â”€â”€ Cascading area dropdown â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function updateAreaOptions(selectedRegion: string) {
      const areaSelect = document.getElementById('areaFilter') as HTMLSelectElement;
      const currentArea = areaSelect.value;
      areaSelect.innerHTML = '<option value="">All Areas</option>';

      const areasToShow: string[] = selectedRegion
        ? (regionToAreas[selectedRegion] || [])
        : allAreas;

      areasToShow.forEach((area: string) => {
        const opt = document.createElement('option');
        opt.value = area;
        opt.textContent = area;
        if (area === currentArea && (!selectedRegion || (regionToAreas[selectedRegion] || []).includes(currentArea))) {
          opt.selected = true;
        }
        areaSelect.appendChild(opt);
      });
    }

    // â”€â”€ Filtering â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function applyFilters() {
      const dateFrom = (document.getElementById('dateFrom') as HTMLInputElement).value;
      const dateTo = (document.getElementById('dateTo') as HTMLInputElement).value;
      const crimeType = (document.getElementById('crimeTypeFilter') as HTMLSelectElement).value;
      const region = (document.getElementById('regionFilter') as HTMLSelectElement).value;
      const area = (document.getElementById('areaFilter') as HTMLSelectElement).value;

      isFiltered = !!(dateFrom || dateTo || crimeType || region || area);

      filteredCrimes = allCrimes.filter((crime: any) => {
        const crimeDate = new Date(crime.date);
        if (dateFrom && crimeDate < new Date(dateFrom)) return false;
        if (dateTo && crimeDate > new Date(dateTo)) return false;
        if (crimeType && crime.crimeType !== crimeType) return false;
        if (region && crime.region !== region) return false;
        if (area && crime.area !== area) return false;
        return true;
      });

      currentPage = 1;
      renderCrimes();
      updateResultsCount();
    }

    // â”€â”€ Rendering â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function renderCrimes() {
      const container = document.getElementById('crimeAccordions')!;
      const loadMoreEl = document.getElementById('loadMore')!;

      if (filteredCrimes.length === 0) {
        container.innerHTML = `
          <div class="rounded-lg p-8 text-center border border-slate-200 dark:border-[hsl(0_0%_18%)]">
            <svg class="w-12 h-12 mx-auto mb-4 text-slate-300 dark:text-[hsl(0_0%_25%)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <p class="text-sm mb-2 text-slate-500 dark:text-[hsl(0_0%_50%)]">No crimes match your filters.</p>
            <p class="text-xs text-slate-400 dark:text-[hsl(0_0%_40%)]">Try broadening your date range, area, or crime type.</p>
          </div>`;
        loadMoreEl.style.display = 'none';
        return;
      }

      const crimes = filteredCrimes.slice(0, currentPage * perPage);

      if (isFiltered) {
        // Flat list when filters are active
        container.innerHTML = `<div class="space-y-1">${crimes.map(createCrimeListItemHTML).join('')}</div>`;
      } else {
        // Accordion mode grouped by date
        const byDate = new Map<string, any[]>();
        crimes.forEach((crime: any) => {
          if (!byDate.has(crime.date)) byDate.set(crime.date, []);
          byDate.get(crime.date)!.push(crime);
        });

        const sortedDates = Array.from(byDate.keys()).sort((a, b) =>
          new Date(b).getTime() - new Date(a).getTime()
        );

        container.innerHTML = sortedDates
          .map((date, index) => createAccordionHTML(date, byDate.get(date)!, index === 0))
          .join('');
      }

      loadMoreEl.style.display = crimes.length >= filteredCrimes.length ? 'none' : 'inline-block';
    }

    function createCrimeListItemHTML(crime: any): string {
      const crimeType = escapeHtml(crime.primaryCrimeType || crime.crimeType);
      return `
        <a href="/trinidad/crime/${escapeHtml(crime.slug)}/" class="crime-card relative py-2.5 px-3 rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition group block">
          <div class="text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_80%)] group-hover:text-rose-600 transition">${escapeHtml(crime.headline)}</div>
          <div class="flex items-center gap-2 mt-1 text-xs text-slate-400 dark:text-[hsl(0_0%_45%)]">
            <span class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-[hsl(0_0%_15%)] text-slate-500 dark:text-[hsl(0_0%_60%)]">${crimeType}</span>
            <span>${escapeHtml(crime.area)}</span>
          </div>
        </a>`;
    }

    function calculateVictimCount(crimes: any[]): number {
      return crimes.reduce((total: number, crime: any) => {
        const v = crime.victimCount && crime.victimCount > 0 ? crime.victimCount : 1;
        return total + v;
      }, 0);
    }

    // Generates accordion HTML using the same da-* classes as server-rendered HTML
    // so the event-delegation accordion toggle script works on dynamically rendered items too.
    function createAccordionHTML(date: string, crimes: any[], isExpanded: boolean): string {
      const formattedDate = new Date(date).toLocaleDateString('en-US', {
        weekday: 'long', month: 'long', day: 'numeric', year: 'numeric'
      });
      const incidentCount = crimes.length;
      const victimCount = calculateVictimCount(crimes);

      const crimeItems = crimes.map((crime: any) => {
        const crimeType = escapeHtml(crime.primaryCrimeType || crime.crimeType);
        return `
          <a href="/trinidad/crime/${escapeHtml(crime.slug)}/" class="crime-card relative pl-4 py-2.5 rounded-lg hover:bg-slate-50 dark:hover:bg-[hsl(0_0%_12%)] transition group block">
            <div aria-hidden="true" class="absolute left-[-18px] top-4 w-2 h-2 rounded-full bg-slate-300 dark:bg-[hsl(0_0%_35%)]"></div>
            <div class="text-sm font-medium text-slate-700 dark:text-[hsl(0_0%_80%)] group-hover:text-rose-600 transition">${escapeHtml(crime.headline)}</div>
            <div class="flex items-center gap-2 mt-1 text-xs text-slate-400 dark:text-[hsl(0_0%_45%)]">
              <span class="px-1.5 py-0.5 rounded bg-slate-100 dark:bg-[hsl(0_0%_15%)] text-slate-500 dark:text-[hsl(0_0%_60%)]">${crimeType}</span>
              <span>${escapeHtml(crime.area)}</span>
            </div>
          </a>`;
      }).join('');

      return `
        <div class="date-accordion mb-3" data-date="${escapeHtml(date)}">
          <button
            class="da-header w-full px-4 py-3 bg-white dark:bg-[hsl(0_0%_10%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_18%)] hover:border-rose-300 dark:hover:border-rose-700 transition flex items-center justify-between group"
            aria-expanded="${isExpanded}"
          >
            <div class="flex items-center gap-3">
              <svg class="da-chevron w-4 h-4 text-slate-400 dark:text-[hsl(0_0%_55%)] transition-transform duration-200 flex-shrink-0 ${isExpanded ? 'rotate-90' : ''}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              <div class="text-left">
                <h3 class="text-caption font-bold text-slate-700 dark:text-[hsl(0_0%_90%)] leading-snug">${escapeHtml(formattedDate)}</h3>
                <p class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)]">${incidentCount} ${incidentCount === 1 ? 'incident' : 'incidents'} Â· ${victimCount} ${victimCount === 1 ? 'victim' : 'victims'}</p>
              </div>
            </div>
            <span class="px-2 py-0.5 rounded-full border border-slate-300 dark:border-[hsl(0_0%_30%)] text-slate-500 dark:text-[hsl(0_0%_55%)] text-caption font-medium">${incidentCount}</span>
          </button>
          <div class="da-content overflow-hidden${isExpanded ? ' is-open' : ''}">
            <div class="relative pl-7 py-2">
              <div class="absolute left-3.5 top-0 bottom-0 w-px border-l-2 border-dotted border-slate-300 dark:border-[hsl(0_0%_25%)]"></div>
              <div class="space-y-1">${crimeItems}</div>
            </div>
          </div>
        </div>`;
    }

    // â”€â”€ Results count â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function updateResultsCount() {
      const showing = Math.min(currentPage * perPage, filteredCrimes.length);
      const showingEl = document.getElementById('resultsShowing');
      const totalEl = document.getElementById('resultsTotal');
      if (showingEl) showingEl.textContent = String(showing);
      if (totalEl) totalEl.textContent = String(filteredCrimes.length);
    }

    // â”€â”€ Filter indicator (Filters button state + inline Clear) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    const filtersBtnEl = document.getElementById('filtersBtn')!;
    const filtersBtnText = document.getElementById('filtersBtnText')!;
    const clearFiltersInline = document.getElementById('clearFiltersInline')!;
    const applyBtn = document.getElementById('applyFilters')!;

    function showFilterActive() {
      filtersBtnText.textContent = 'Filters Active â€º';
      (filtersBtnEl as HTMLElement).style.borderColor = '#e11d48';
      (filtersBtnEl as HTMLElement).style.color = '#e11d48';
      (filtersBtnEl as HTMLElement).style.backgroundColor = 'color-mix(in srgb, #e11d48 10%, transparent)';
      clearFiltersInline.classList.remove('hidden');
      (applyBtn as HTMLElement).style.backgroundColor = '#e11d48';
      (applyBtn as HTMLElement).style.color = '#fff';
      (applyBtn as HTMLElement).style.borderColor = '#e11d48';
    }

    function hideFilterActive() {
      filtersBtnText.textContent = 'Filters â€º';
      (filtersBtnEl as HTMLElement).style.borderColor = '';
      (filtersBtnEl as HTMLElement).style.color = '';
      (filtersBtnEl as HTMLElement).style.backgroundColor = '';
      clearFiltersInline.classList.add('hidden');
      (applyBtn as HTMLElement).style.backgroundColor = '';
      (applyBtn as HTMLElement).style.color = '';
      (applyBtn as HTMLElement).style.borderColor = '';
    }

    function syncFilterIndicator() {
      if (isFiltered) showFilterActive(); else hideFilterActive();
    }

    // â”€â”€ Clear all filters â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function clearAllFilters() {
      (document.getElementById('dateFrom') as HTMLInputElement).value = '';
      (document.getElementById('dateTo') as HTMLInputElement).value = '';
      (document.getElementById('crimeTypeFilter') as HTMLSelectElement).value = '';
      (document.getElementById('regionFilter') as HTMLSelectElement).value = '';
      updateAreaOptions('');
      (document.getElementById('areaFilter') as HTMLSelectElement).value = '';
      applyFilters();
      hideFilterActive();
    }

    // â”€â”€ Event listeners â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    document.getElementById('dateFrom')!.addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('dateTo')!.addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('crimeTypeFilter')!.addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });
    document.getElementById('regionFilter')!.addEventListener('change', () => {
      updateAreaOptions((document.getElementById('regionFilter') as HTMLSelectElement).value);
      applyFilters();
      syncFilterIndicator();
    });
    document.getElementById('areaFilter')!.addEventListener('change', () => { applyFilters(); syncFilterIndicator(); });

    document.getElementById('clearFilters')!.addEventListener('click', clearAllFilters);
    clearFiltersInline.addEventListener('click', clearAllFilters);

    // Apply button closes the tray
    applyBtn.addEventListener('click', closeTray);

    document.getElementById('loadMore')!.addEventListener('click', () => {
      currentPage++;
      renderCrimes();
      updateResultsCount();
    });

    // â”€â”€ Initial setup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // Server already rendered the first 30 accordions â€” only sync count + Load More visibility.
    updateResultsCount();
    const loadMoreEl = document.getElementById('loadMore')!;
    loadMoreEl.style.display = filteredCrimes.length <= perPage ? 'none' : 'inline-block';
  });
</script>

<!-- Accordion toggle: event delegation on container, re-fires on every navigation -->
<script>
  document.addEventListener('astro:page-load', () => {
    const container = document.getElementById('crimeAccordions');
    if (!container) return;
    container.addEventListener('click', (e) => {
      const header = (e.target as Element).closest('.da-header');
      if (!header) return;
      const accordion = header.closest('.date-accordion');
      const content = accordion && accordion.querySelector('.da-content');
      const chevron = header.querySelector('.da-chevron');
      const expanded = header.getAttribute('aria-expanded') === 'true';
      if (content && chevron) {
        if (expanded) {
          header.setAttribute('aria-expanded', 'false');
          content.classList.remove('is-open');
          chevron.classList.remove('rotate-90');
        } else {
          header.setAttribute('aria-expanded', 'true');
          content.classList.add('is-open');
          chevron.classList.add('rotate-90');
        }
      }
    });
  });
</script>

