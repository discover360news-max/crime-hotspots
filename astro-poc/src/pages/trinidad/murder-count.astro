---
/**
 * Trinidad Murder Count 2026
 * Mobile-first page displaying murder count with animated flip counter
 * Target keyword: "how many murders in trinidad 2026"
 */

// Keep murder count page static (pre-rendered at build time)
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import FlipCounter from '../../components/FlipCounter.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { getTrinidadCrimes } from '../../lib/crimeData';
import { countCrimeType } from '../../lib/dashboardHelpers';

// Fetch current year's crime data
const allCrimes = await getTrinidadCrimes();
const currentYear = 2026;
const crimes = allCrimes.filter(crime => crime.year === currentYear);

// Get murder count using the established helper
const murderCount = countCrimeType(crimes, 'Murder');

// Last updated = build time (when data was fetched from Google Sheets)
// Daily GitHub Action rebuilds at 6 AM UTC, so this reflects actual data freshness
const lastUpdated = new Date().toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric'
});

const title = "Trinidad Murder Count 2026 - Live Statistics | Crime Hotspots";
const description = "Track the Trinidad & Tobago murder toll for 2026. Live count updated daily. View statistics, trends, and detailed crime data.";
---

<Layout title={title} description={description}>
  <main class="px-4 py-8" data-pagefind-ignore>
    <!-- Breadcrumbs -->
    <div class="mb-6">
      <Breadcrumbs items={[
        { label: 'Home', href: '/' },
        { label: 'Trinidad', href: '/trinidad/dashboard' },
        { label: 'Murder Count' }
      ]} />
    </div>

    <!-- Main Content - Centered -->
    <div class="flex flex-col items-center">
      <div class="text-center space-y-4 max-w-lg mx-auto">
      <!-- Header -->
      <div class="space-y-1">
        <h1 class="text-2xl sm:text-3xl font-bold text-slate-700">
          Trinidad & Tobago
        </h1>
        <p class="text-lg sm:text-xl text-slate-500 font-medium">
          Murder Count
        </p>
        <p class="text-4xl sm:text-5xl font-bold text-rose-600">
          {currentYear}
        </p>
      </div>

      <!-- Flip Counter -->
      <div class="py-8">
        <FlipCounter value={murderCount} animateOnLoad={true} />
      </div>

      <!-- Last Updated -->
      <p class="text-sm text-slate-400">
        Updated: {lastUpdated}
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center pt-4">
        <a
          href="/trinidad/dashboard"
          class="px-6 py-3 min-h-[44px] flex items-center justify-center bg-rose-600 text-white rounded-lg hover:bg-rose-700 active:bg-rose-800 transition font-medium text-sm shadow-md"
        >
          View Dashboard
        </a>
        <a
          href="/methodology"
          class="px-6 py-3 min-h-[44px] flex items-center justify-center border border-slate-300 text-slate-600 rounded-lg hover:bg-slate-50 active:bg-slate-100 transition font-medium text-sm"
        >
          Methodology
        </a>
      </div>

      <!-- Share Section -->
      <div class="pt-6 border-t border-slate-200 mt-6">
        <p class="text-sm text-slate-400 mb-3">Share this page</p>
        <div class="flex gap-3 justify-center">
          <!-- WhatsApp -->
          <a
            id="share-whatsapp"
            href="#"
            class="w-11 h-11 flex items-center justify-center rounded-full bg-[#25D366] text-white hover:opacity-90 active:opacity-80 transition shadow-sm"
            aria-label="Share on WhatsApp"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </a>
          <!-- Facebook -->
          <a
            id="share-facebook"
            href="#"
            class="w-11 h-11 flex items-center justify-center rounded-full bg-[#1877F2] text-white hover:opacity-90 active:opacity-80 transition shadow-sm"
            aria-label="Share on Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <!-- X/Twitter -->
          <a
            id="share-twitter"
            href="#"
            class="w-11 h-11 flex items-center justify-center rounded-full bg-black text-white hover:opacity-90 active:opacity-80 transition shadow-sm"
            aria-label="Share on X"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <!-- Copy Link -->
          <button
            id="share-copy"
            class="w-11 h-11 flex items-center justify-center rounded-full bg-slate-200 text-slate-600 hover:bg-slate-300 active:bg-slate-400 transition shadow-sm"
            aria-label="Copy link"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </button>
        </div>
        <p id="copy-feedback" class="text-xs text-emerald-600 mt-2 opacity-0 transition-opacity">Link copied!</p>
      </div>
    </div>
    </div>

    <!-- Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Trinidad Murder Count 2026",
      "description": description,
      "url": "https://crimehotspots.com/trinidad/murder-count/",
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://crimehotspots.com/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Trinidad",
            "item": "https://crimehotspots.com/trinidad/dashboard/"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Murder Count"
          }
        ]
      },
      "mainEntity": {
        "@type": "StatisticalPopulation",
        "name": "Trinidad & Tobago Murder Count 2026",
        "numConstraints": murderCount
      }
    })} />
  </main>
</Layout>

<style>
  @import '../../styles/flip-counter.css';
</style>

<script define:vars={{ murderCount, currentYear }}>
  // Share functionality
  const pageUrl = 'https://crimehotspots.com/trinidad/murder-count/';
  const shareText = `Trinidad Murder Count ${currentYear}: ${murderCount} murders so far. Track live statistics at Crime Hotspots.`;

  // WhatsApp
  document.getElementById('share-whatsapp').href =
    `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + pageUrl)}`;

  // Facebook
  document.getElementById('share-facebook').href =
    `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(pageUrl)}`;

  // X/Twitter
  document.getElementById('share-twitter').href =
    `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(pageUrl)}`;

  // Copy link
  document.getElementById('share-copy').addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(pageUrl);
      const feedback = document.getElementById('copy-feedback');
      feedback.style.opacity = '1';
      setTimeout(() => { feedback.style.opacity = '0'; }, 2000);
    } catch (err) {
      // Fallback for older browsers
      const input = document.createElement('input');
      input.value = pageUrl;
      document.body.appendChild(input);
      input.select();
      document.execCommand('copy');
      document.body.removeChild(input);
      const feedback = document.getElementById('copy-feedback');
      feedback.style.opacity = '1';
      setTimeout(() => { feedback.style.opacity = '0'; }, 2000);
    }
  });
</script>
