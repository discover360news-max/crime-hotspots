---
/**
 * 404 Not Found Page
 * Custom error page with helpful navigation
 */

import Layout from '../layouts/Layout.astro';

const title = "404 - Page Not Found | Crime Hotspots";
const description = "The page you're looking for doesn't exist. Browse our crime dashboards and headlines.";
---

<Layout title={title} description={description}>
  <div class="min-h-screen flex items-center justify-center px-4 py-16">
    <div class="max-w-2xl w-full text-center">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-rose-600 mb-4">404</h1>
        <h2 class="text-h1 font-bold text-slate-700 mb-4">Page Not Found</h2>
        <p class="text-xs text-slate-500 mb-8">
          Sorry, we couldn't find the page you're looking for. It may have been moved or deleted.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="bg-white/50 backdrop-blur-md rounded-xl shadow-md border border-slate-100 p-6 mb-8">
        <h3 class="text-h3 font-bold text-slate-700 mb-6">Where would you like to go?</h3>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Trinidad -->
          <a href="/trinidad/dashboard"
             class="group bg-white/50 backdrop-blur-md rounded-lg p-4 border border-slate-200 hover:border-rose-600 hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              <span class="text-small font-semibold text-slate-700 group-hover:text-rose-600">Trinidad Dashboard</span>
            </div>
            <p class="text-xs text-slate-500">View crime statistics and maps</p>
          </a>

          <!-- Trinidad Headlines -->
          <a href="/trinidad/headlines"
             class="group bg-white/50 backdrop-blur-md rounded-lg p-4 border border-slate-200 hover:border-rose-600 hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              <span class="text-small font-semibold text-slate-700 group-hover:text-rose-600">Latest Headlines</span>
            </div>
            <p class="text-xs text-slate-500">Browse recent crime reports</p>
          </a>

          <!-- Archive -->
          <a href="/trinidad/archive"
             class="group bg-white/50 backdrop-blur-md rounded-lg p-4 border border-slate-200 hover:border-rose-600 hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
              </svg>
              <span class="text-small font-semibold text-slate-700 group-hover:text-rose-600">Crime Archives</span>
            </div>
            <p class="text-xs text-slate-500">Search historical data</p>
          </a>

          <!-- Blog -->
          <a href="/blog"
             class="group bg-white/50 backdrop-blur-md rounded-lg p-4 border border-slate-200 hover:border-rose-600 hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <span class="text-small font-semibold text-slate-700 group-hover:text-rose-600">Weekly Reports</span>
            </div>
            <p class="text-xs text-slate-500">Read analysis and insights</p>
          </a>

          <!-- About -->
          <a href="/about"
             class="group bg-white/50 backdrop-blur-md rounded-lg p-4 border border-slate-200 hover:border-rose-600 hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-small font-semibold text-slate-700 group-hover:text-rose-600">About Us</span>
            </div>
            <p class="text-xs text-slate-500">Learn about our mission</p>
          </a>

          <!-- FAQ -->
          <a href="/faq"
             class="group bg-white/50 backdrop-blur-md rounded-lg p-4 border border-slate-200 hover:border-rose-600 hover:shadow-lg transition">
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-small font-semibold text-slate-700 group-hover:text-rose-600">FAQ</span>
            </div>
            <p class="text-xs text-slate-500">Common questions answered</p>
          </a>
        </div>
      </div>

      <!-- Home Button -->
      <a href="/"
         class="inline-flex items-center gap-2 px-6 py-3 bg-rose-600 text-white rounded-lg hover:bg-rose-700 transition font-medium text-xs">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Go to Homepage
      </a>
    </div>
  </div>
</Layout>
