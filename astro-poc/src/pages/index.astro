---
/**
 * Homepage - Country Selection
 * Caribbean-wide crime statistics portal
 */

import Layout from '../layouts/Layout.astro';

const title = "Crime Hotspots Caribbean â€” Live Crime Statistics for the Caribbean";
const description = "Real-time crime statistics and interactive dashboards for the Caribbean. Track murders, robberies, and incidents by location with verified data from trusted news sources.";

// Country data (Trinidad-only focus for now)
const countries = [
  {
    id: 'tt',
    name: 'Trinidad & Tobago',
    short: 'Nationwide coverage',
    flag: 'ðŸ‡¹ðŸ‡¹',
    dashboard: '/trinidad/dashboard',
    available: true,
    image: '/assets/images/trinidad.png',
  },
  {
    id: 'gy',
    name: 'Guyana',
    short: 'Coming soon',
    flag: 'ðŸ‡¬ðŸ‡¾',
    dashboard: '/guyana/dashboard',
    available: false,
    image: '/assets/images/guyana.jpg',
  },
  {
    id: 'bdos',
    name: 'Barbados',
    short: 'Coming soon',
    flag: 'ðŸ‡§ðŸ‡§',
    dashboard: '/barbados/dashboard',
    available: false,
    image: '/assets/images/barbados.jpg',
  }
];
---

<Layout title={title} description={description}>
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
    <!-- Hero Section -->
    <section class="flex flex-col items-center justify-center text-center px-4 mb-12">
      <div class="text-center max-w-2xl mx-auto mb-8">
        <h1 class="text-h1 font-bold text-slate-700 mb-3">
          Every Island | Every Incident | One Map
        </h1>
        <p class="text-small text-slate-500 mb-2">
          Crime data and headlines across the islands
        </p>
        <p class="text-xs text-slate-400">
          Select a region for immediate intelligence, trend analysis, and updates.
        </p>
      </div>

      <!-- Country Cards Grid -->
      <div
        class="grid gap-8 sm:gap-10 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 place-items-center justify-center mx-auto"
        role="list"
        aria-label="Countries"
      >
        {countries.map(country => (
          <div
            class={`w-full max-w-[200px] sm:max-w-[220px] rounded-2xl shadow-md overflow-hidden
              ${country.available
                ? 'bg-white-100/50 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 cursor-pointer'
                : 'bg-white-100/50 opacity-30 cursor-not-allowed'}`}
            role="listitem"
          >
            {country.available ? (
              <a href={country.dashboard} class="block">
                <!-- Country Image -->
                <div class="w-full aspect-square overflow-hidden bg-white-100/50">
                  <img
                    src={country.image}
                    alt={`${country.name} map`}
                    class="w-full h-full object-cover"
                  />
                </div>

                <!-- Country Info -->
                <div class="pb-8 px-3 text-center">
                  
                  <!-- Country Name -->
                  <h2 class="text-tiny font-semibold text-slate-500 mb-1">
                    {country.name}
                  </h2>

                  <!-- View Dashboard Link -->
                  <div class="mt-1">
                    <span class="inline-flex items-center gap-1 text-xs text-rose-600 font-medium hover:text-rose-700">
                      View Dashboard
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            ) : (
              <!-- Disabled Card (Coming Soon) -->
              <div class="block">
                <!-- Country Image (grayed out) -->
                <div class="w-full aspect-square overflow-hidden bg-slate-200 relative">
                  <img
                    src={country.image}
                    alt={`${country.name} map`}
                    class="w-full h-full object-cover grayscale"
                  />
                  <div class="absolute inset-0 bg-slate-300/20"></div>
                </div>

                <!-- Country Info -->
                <div class="pb-8 px-3 text-center">
                  
                  <!-- Country Name -->
                  <h2 class="text-small font-semibold text-slate-500 mb-1">
                    {country.name}
                  </h2>

                  <!-- Coming Soon Badge -->
                  <div class="mt-3">
                    <span class="inline-block px-6 py-1 rounded-full bg-slate-200 text-xs text-slate-500 font-medium">
                      Coming Soon
                    </span>
                  </div>
                </div>
              </div>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- Quick Links Section -->
    <section class="mt-16 py-12 bg-white/50 backdrop-blur-md rounded-3xl shadow-md border border-slate-100">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-h2 font-bold text-rose-600 mb-6">
          Verified Crime Intelligence
        </h2>
        <p class="text-xs text-slate-500 mb-8 max-w-2xl mx-auto">
          Our platform aggregates data from trusted Caribbean news outlets, providing statistics for serious crimes,
          interactive maps, and comprehensive analytics to keep communities informed and safe.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Feature 1 -->
          <div class="p-4">
            <div class="w-8 h-8 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
            </div>
            <h3 class="text-nav font-semibold text-rose-600 mb-2">Interactive Maps</h3>
            <p class="text-xs text-slate-500">
              Visualize crime hotspots with geographic precision and regional breakdowns
            </p>
          </div>

          <!-- Feature 2 -->
          <div class="p-4">
            <div class="w-8 h-8 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="text-nav font-semibold text-rose-600 mb-2">Live Statistics</h3>
            <p class="text-xs text-slate-500">
              Track crime trends over time with detailed analytics and reporting
            </p>
          </div>

          <!-- Feature 3 -->
          <div class="p-4">
            <div class="w-8 h-8 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="text-nav font-semibold text-rose-600 mb-2">Trusted Sources</h3>
            <p class="text-xs text-slate-500">
              Data sourced from verified Caribbean news outlets and official reports
            </p>
          </div>
        </div>

        <div class="mt-8">
          <a
            href="/about"
            class="inline-flex items-center gap-2 px-6 py-2.5 rounded-lg border-1 border-rose-600 text-rose-600 hover:bg-rose-600 hover:text-white transition text-xs font-medium"
          >
            Learn More About Our Data
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
