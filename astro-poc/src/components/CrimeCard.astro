---
/**
 * Crime Card Component
 *
 * Displays individual crime incident in card format
 * Reusable across Headlines, Archive, Search
 *
 * Props:
 * - crime: Object with { date, crimeType, location, area, source, slug }
 */

import { getCrimeTailwindColor } from '../lib/crimeColors';

interface Props {
  crime: {
    date: string;
    crimeType: string;
    location: string;
    area: string;
    source: string;
    slug: string;
  };
}

const { crime } = Astro.props;

// Get crime type color (centralized utility)
const colorClass = getCrimeTailwindColor(crime.crimeType);

// Format date for display
const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
};
---

<article class="bg-white/70 backdrop-blur-md rounded-xl shadow-md border border-slate-100 p-4 hover:shadow-lg transition cursor-pointer group" onclick={`window.location.href='/trinidad/crime/${crime.slug}'`}>
  <!-- Crime Type Badge -->
  <div class="flex items-start justify-between mb-3">
    <span class={`inline-block px-3 py-1 rounded-full text-white text-xs font-medium ${colorClass}`}>
      {crime.crimeType}
    </span>
    <span class="text-xs text-slate-400">
      {formatDate(crime.date)}
    </span>
  </div>

  <!-- Location -->
  <h3 class="text-small font-semibold text-slate-700 mb-2">
    {crime.location}
  </h3>

  <!-- Area -->
  <p class="text-xs text-slate-500 mb-3 flex items-center gap-1">
    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
    {crime.area}
  </p>

  <!-- Actions -->
  <div class="flex items-center justify-between pt-3 border-t border-slate-200">
    <a
      href={`/trinidad/crime/${crime.slug}`}
      class="text-xs text-rose-600 hover:text-rose-700 font-medium flex items-center gap-1"
    >
      View Details
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>

    <a
      href={crime.source}
      target="_blank"
      rel="noopener noreferrer"
      class="text-xs text-slate-500 hover:text-slate-700 flex items-center gap-1"
      title="Read original article"
    >
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
      Source
    </a>
  </div>
</article>
