---
/**
 * Header Component
 * Reusable header with navigation for all pages
 * Trinidad-focused (no dropdowns needed yet)
 *
 * Phase 2 UX: Direct links when on Trinidad pages (reduces modal friction)
 */
import { routes } from '../config/routes';
import NewsletterSignup from './NewsletterSignup.astro';

interface Props {
  isHomepage?: boolean;
}

const { isHomepage = false } = Astro.props;

// Detect if we're on a Trinidad page for direct navigation (no modals needed)
const currentPath = Astro.url.pathname;
const isOnTrinidadPage = currentPath.startsWith('/trinidad');

// Phase 3: Detect active section for visual indicator
type Section = 'dashboard' | 'headlines' | 'areas' | 'blog' | null;

function getActiveSection(path: string): Section {
  if (path.startsWith('/trinidad/dashboard')) return 'dashboard';
  if (path.startsWith('/trinidad/headlines')) return 'headlines';
  if (path.startsWith('/trinidad/areas') || path.startsWith('/trinidad/area/')) return 'areas';
  if (path.startsWith('/blog')) return 'blog';
  return null;
}

const activeSection = getActiveSection(currentPath);

// Active link styles
const baseNavClass = "text-caption font-bold transition-colors";
const activeNavClass = `${baseNavClass} text-rose-600 border-b-2 border-rose-600 pb-0.5`;
const inactiveNavClass = `${baseNavClass} text-slate-700 dark:text-[hsl(0_0%_85%)] hover:text-rose-600 dark:hover:text-rose-400`;
---

<header class="bg-white dark:bg-[hsl(0_0%_5%)] shadow-sm dark:shadow-[0_1px_0_0_hsl(0_0%_18%)] sticky top-0 z-40" data-pagefind-ignore>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo (light / dark mode variants) -->
      <a href="/" class="flex items-center">
        <img src="/assets/images/logo.png" alt="Crime Hotspots logo" class="h-12 md:h-14 w-auto block dark:hidden" />
        <img src="/assets/images/logo-dark-mode.png" alt="Crime Hotspots logo" class="h-12 md:h-14 w-auto hidden dark:block" />
      </a>

      <!-- Mobile subscribe + search + theme toggle + hamburger menu -->
      <div class="flex md:hidden items-center gap-2 ml-auto">
        <button
          id="subscribeToggleMobile"
          class="px-3 py-1.5 rounded-lg bg-[hsl(0_0%_45%)] dark:bg-[hsl(0_0%_30%)] text-white hover:bg-[hsl(0_0%_35%)] dark:hover:bg-[hsl(0_0%_25%)] active:bg-[hsl(0_0%_30%)] transition text-caption font-bold"
          aria-label="Subscribe to our channels"
        >
          Subscribe
        </button>
        <button
          onclick="window.openSearchModal()"
          class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-[hsl(0_0%_12%)] active:bg-slate-200 transition text-slate-700 dark:text-[hsl(0_0%_70%)] hover:text-rose-600"
          aria-label="Search"
          title="Search"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <!-- Mobile: Theme toggle -->
        <button
          id="themeToggleMobile"
          onclick="window.toggleTheme()"
          class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-[hsl(0_0%_12%)] transition text-slate-700 dark:text-[hsl(0_0%_70%)] hover:text-rose-600 dark:hover:text-rose-400"
          aria-label="Toggle light/dark mode"
        >
          <svg id="themeIconSunMobile" class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364-6.364l-.707.707M6.343 17.657l-.707.707M18.364 18.364l-.707-.707M6.343 6.343l-.707-.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          <svg id="themeIconMoonMobile" class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
        </button>
        <button
          id="menuToggle"
          class="inline-flex items-center justify-center p-2 rounded-md text-slate-700 dark:text-[hsl(0_0%_70%)] hover:bg-slate-100 dark:hover:bg-[hsl(0_0%_12%)] active:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-rose-300 transition-all"
          aria-controls="mainNav"
          aria-expanded="false"
        >
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Desktop nav -->
      <nav id="mainNav" class="hidden md:flex items-center gap-4" role="navigation" aria-label="Primary">
        <!-- Primary links -->
        {!isHomepage && (
          <>
            {isOnTrinidadPage ? (
              <>
                <a href={routes.trinidad.dashboard} class={activeSection === 'dashboard' ? activeNavClass : inactiveNavClass}>
                  Dashboard
                </a>
                <a href={routes.trinidad.headlines} class={activeSection === 'headlines' ? activeNavClass : inactiveNavClass}>
                  Headlines
                </a>
              </>
            ) : (
              <>
                <button onclick="window.openDashboardModal()" class={`${inactiveNavClass} cursor-pointer`}>
                  Dashboard
                </button>
                <button onclick="window.openHeadlinesModal()" class={`${inactiveNavClass} cursor-pointer`}>
                  Headlines
                </button>
              </>
            )}
          </>
        )}

        {isOnTrinidadPage ? (
          <a href={routes.trinidad.areas} class={activeSection === 'areas' ? activeNavClass : inactiveNavClass}>
            Areas
          </a>
        ) : (
          <button onclick="window.navigateAreas()" class={`${inactiveNavClass} cursor-pointer`}>
            Areas
          </button>
        )}

        <a href={routes.blog} class={activeSection === 'blog' ? activeNavClass : inactiveNavClass}>
          Blog
        </a>

        <!-- Utility icons -->
        <button
          onclick="window.openSearchModal()"
          class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-[hsl(0_0%_12%)] active:bg-slate-200 transition text-slate-700 dark:text-[hsl(0_0%_70%)] hover:text-rose-600"
          aria-label="Search"
          title="Search (Ctrl+K)"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>

        <button
          id="themeToggleDesktop"
          onclick="window.toggleTheme()"
          class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-[hsl(0_0%_12%)] active:bg-slate-200 transition text-slate-700 dark:text-[hsl(0_0%_70%)] hover:text-rose-600 dark:hover:text-rose-400"
          aria-label="Toggle light/dark mode"
          title="Toggle theme"
        >
          <svg id="themeIconSunDesktop" class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364-6.364l-.707.707M6.343 17.657l-.707.707M18.364 18.364l-.707-.707M6.343 6.343l-.707-.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          <svg id="themeIconMoonDesktop" class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
        </button>

        <!-- CTAs -->
        <a href={routes.report} class="px-4 py-1.5 min-h-[22px] rounded-lg bg-rose-600 text-white hover:bg-rose-700 active:bg-rose-800 transition text-xs font-medium">
          Report a Crime
        </a>

        <button
          id="subscribeToggle"
          class="px-4 py-1.5 min-h-[22px] rounded-lg border border-slate-300 dark:border-[hsl(0_0%_30%)] text-slate-600 dark:text-[hsl(0_0%_70%)] hover:border-slate-400 dark:hover:border-[hsl(0_0%_45%)] hover:text-slate-800 dark:hover:text-[hsl(0_0%_90%)] transition text-caption font-bold"
          aria-label="Subscribe to our channels"
        >
          Subscribe
        </button>
      </nav>
    </div>

  </div>
</header>

