<script is:inline>
  // Scroll lock helpers — compensate for scrollbar width to prevent content shift
  function lockScroll() {
    var scrollbarWidth = window.innerWidth - document.documentElement.clientWidth;
    document.body.style.overflow = 'hidden';
    if (scrollbarWidth > 0) {
      document.body.style.paddingRight = scrollbarWidth + 'px';
    }
  }

  function unlockScroll() {
    document.body.style.overflow = '';
    document.body.style.paddingRight = '';
  }

  // Mobile menu
  const menuToggle = document.getElementById('menuToggle');
  const mobileNav = document.getElementById('mobileNav');
  const mobileBackdrop = document.getElementById('mobileMenuBackdrop');
  const mobileMenuClose = document.getElementById('mobileMenuClose');

  function openMobileMenu() {
    if (!mobileBackdrop || !mobileNav || !menuToggle) return;
    mobileBackdrop.classList.remove('hidden');
    mobileNav.classList.remove('translate-x-full', 'invisible');
    mobileNav.classList.add('translate-x-0');
    lockScroll();

    requestAnimationFrame(() => {
      mobileBackdrop.classList.remove('opacity-0');
      mobileBackdrop.classList.add('opacity-100');
    });

    menuToggle.setAttribute('aria-expanded', 'true');
  }

  function closeMobileMenu() {
    if (!mobileBackdrop || !mobileNav || !menuToggle) return;
    mobileNav.classList.remove('translate-x-0');
    mobileNav.classList.add('translate-x-full');
    mobileBackdrop.classList.remove('opacity-100');
    mobileBackdrop.classList.add('opacity-0');
    unlockScroll();

    setTimeout(() => {
      mobileBackdrop.classList.add('hidden');
      mobileNav.classList.add('invisible');
    }, 300);

    menuToggle.setAttribute('aria-expanded', 'false');
  }

  if (menuToggle && mobileNav) {
    menuToggle.addEventListener('click', (e) => {
      e.stopPropagation();
      const isOpen = menuToggle.getAttribute('aria-expanded') === 'true';
      if (isOpen) closeMobileMenu();
      else openMobileMenu();
    });

    if (mobileMenuClose) {
      mobileMenuClose.addEventListener('click', closeMobileMenu);
    }

    if (mobileBackdrop) {
      mobileBackdrop.addEventListener('click', closeMobileMenu);
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && menuToggle.getAttribute('aria-expanded') === 'true') {
        closeMobileMenu();
      }
    });

    mobileNav.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        closeMobileMenu();
      });
    });
  }

  // Subscribe tray
  const subscribeToggle = document.getElementById('subscribeToggle');
  const subscribeToggleMobile = document.getElementById('subscribeToggleMobile');
  const subscribeTray = document.getElementById('subscribeTray');
  const subscribeBackdrop = document.getElementById('subscribeBackdrop');
  const subscribeClose = document.getElementById('subscribeClose');

  function openSubscribeTray() {
    if (!subscribeBackdrop || !subscribeTray) return;
    subscribeBackdrop.classList.remove('hidden');
    subscribeTray.classList.remove('translate-x-full', 'invisible');
    subscribeTray.classList.add('translate-x-0');
    lockScroll();

    requestAnimationFrame(() => {
      subscribeBackdrop.classList.remove('opacity-0');
      subscribeBackdrop.classList.add('opacity-100');
    });
  }

  function closeSubscribeTray() {
    if (!subscribeBackdrop || !subscribeTray) return;
    subscribeTray.classList.remove('translate-x-0');
    subscribeTray.classList.add('translate-x-full');
    subscribeBackdrop.classList.remove('opacity-100');
    subscribeBackdrop.classList.add('opacity-0');
    unlockScroll();

    setTimeout(() => {
      subscribeBackdrop.classList.add('hidden');
      subscribeTray.classList.add('invisible');
    }, 300);
  }

  if (subscribeToggle && subscribeTray) {
    subscribeToggle.addEventListener('click', (e) => {
      e.stopPropagation();
      openSubscribeTray();
    });
  }

  if (subscribeToggleMobile && subscribeTray) {
    subscribeToggleMobile.addEventListener('click', (e) => {
      e.stopPropagation();
      openSubscribeTray();
    });
  }

  if (subscribeClose) {
    subscribeClose.addEventListener('click', closeSubscribeTray);
  }

  if (subscribeBackdrop) {
    subscribeBackdrop.addEventListener('click', closeSubscribeTray);
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && subscribeTray && subscribeTray.classList.contains('translate-x-0')) {
      closeSubscribeTray();
    }
  });

  // Context-aware Areas navigation
  // Keep in sync with src/config/routes.ts (inline script can't import modules)
  const countryPaths = [
    { prefix: '/trinidad', areasUrl: '/trinidad/areas/' },
    { prefix: '/guyana', areasUrl: '/guyana/areas/' },
    { prefix: '/barbados', areasUrl: '/barbados/areas/' },
    { prefix: '/jamaica', areasUrl: '/jamaica/areas/' },
  ];

  window.navigateAreas = function() {
    const path = window.location.pathname;
    for (const country of countryPaths) {
      if (path.startsWith(country.prefix)) {
        window.location.href = country.areasUrl;
        return;
      }
    }
    // Not on a country page — open island picker modal
    if (typeof window.openAreasModal === 'function') {
      window.openAreasModal();
    }
  };

</script>
