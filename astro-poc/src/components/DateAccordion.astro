---
/**
 * Date Accordion Component
 * Collapsible section for grouping crimes by date
 */

interface Props {
  date: string;
  crimeCount: number;
  victimCount: number;
  isExpanded?: boolean;
}

const { date, crimeCount, victimCount, isExpanded = false } = Astro.props;

// Format date for display
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  weekday: 'long',
  month: 'long',
  day: 'numeric',
  year: 'numeric'
});
---

<div class="date-accordion mb-4" data-date={date}>
  <!-- Accordion Header -->
  <button
    class="accordion-header w-full px-4 py-3 bg-white/70 dark:bg-[hsl(0_0%_10%)]/70 backdrop-blur-md rounded-lg border border-slate-200 dark:border-[hsl(0_0%_18%)] hover:bg-white/90 dark:hover:bg-[hsl(0_0%_14%)] transition flex items-center justify-between group"
    aria-expanded={isExpanded ? 'true' : 'false'}
  >
    <div class="flex items-center gap-3">
      <!-- Chevron Icon -->
      <svg
        class="chevron w-5 h-5 text-slate-400 dark:text-[hsl(0_0%_55%)] transition-transform duration-200"
        class:list={[isExpanded && 'rotate-90']}
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>

      <!-- Date & Victim Count -->
      <div class="text-left">
        <h3 class="text-small font-semibold text-slate-700 dark:text-[hsl(0_0%_90%)]">{formattedDate}</h3>
        <p class="text-xs text-slate-500 dark:text-[hsl(0_0%_60%)]">{victimCount} {victimCount === 1 ? 'victim' : 'victims'}</p>
      </div>
    </div>

    <!-- Badge -->
    <span class="px-3 py-1 rounded-full bg-rose-100 dark:bg-rose-950/60 text-rose-600 dark:text-rose-400 text-xs font-medium">
      {victimCount}
    </span>
  </button>

  <!-- Accordion Content -->
  <div
    class="accordion-content overflow-hidden"
    class:list={[isExpanded && 'is-open']}
  >
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 pb-4">
      <slot />
    </div>
  </div>
</div>

<style>
  /* height: auto is animatable because Layout.astro sets html { interpolate-size: allow-keywords } */
  .accordion-content {
    height: 0;
    transition: height 300ms ease, margin-top 200ms ease;
  }
  .accordion-content.is-open {
    height: auto;
    margin-top: 0.75rem;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    document.querySelectorAll('.accordion-header').forEach(header => {
      header.addEventListener('click', () => {
        const accordion = header.closest('.date-accordion');
        const content = accordion && accordion.querySelector('.accordion-content');
        const chevron = header.querySelector('.chevron');
        const expanded = header.getAttribute('aria-expanded') === 'true';

        if (content && chevron) {
          if (expanded) {
            header.setAttribute('aria-expanded', 'false');
            content.classList.remove('is-open');
            chevron.classList.remove('rotate-90');
          } else {
            header.setAttribute('aria-expanded', 'true');
            content.classList.add('is-open');
            chevron.classList.add('rotate-90');
          }
        }
      });
    });
  });
</script>
