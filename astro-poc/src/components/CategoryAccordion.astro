---
/**
 * CategoryAccordion
 * Collapsible section grouping safety tips by category.
 * Used on the safety tips index page.
 */

interface Props {
  category: string;
  count: number;
  categoryHref: string;
  isExpanded?: boolean;
}

const { category, count, categoryHref, isExpanded = false } = Astro.props;
---

<div class="cat-accordion mb-3">
  <button
    class="cat-header w-full px-4 py-3 bg-white dark:bg-[hsl(0_0%_10%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_18%)] hover:border-rose-300 dark:hover:border-rose-700 transition flex items-center justify-between group"
    aria-expanded={isExpanded ? 'true' : 'false'}
  >
    <div class="flex items-center gap-3">
      <svg
        class="cat-chevron w-4 h-4 text-slate-400 dark:text-[hsl(0_0%_55%)] transition-transform duration-200 flex-shrink-0"
        class:list={[isExpanded && 'rotate-90']}
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span class="text-body font-bold text-slate-700 dark:text-[hsl(0_0%_90%)]">{category}</span>
    </div>

    <div class="flex items-center gap-2">
      <span class="px-2 py-0.5 rounded-full border border-slate-300 dark:border-[hsl(0_0%_30%)] text-slate-500 dark:text-[hsl(0_0%_55%)] text-caption font-medium">
        {count} {count === 1 ? 'tip' : 'tips'}
      </span>
      <a
        href={categoryHref}
        class="hidden sm:inline text-caption text-slate-400 dark:text-[hsl(0_0%_50%)] hover:text-rose-600 dark:hover:text-rose-400 hover:underline transition"
        onclick="event.stopPropagation()"
      >
        See all →
      </a>
    </div>
  </button>

  <div
    class="cat-content overflow-hidden"
    class:list={[isExpanded && 'is-open']}
  >
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 pb-2">
      <slot />
    </div>
    <a
      href={categoryHref}
      class="sm:hidden mt-2 mb-1 inline-block text-caption font-bold text-slate-600 dark:text-[hsl(0_0%_65%)] hover:text-rose-600 dark:hover:text-rose-400 hover:underline transition-colors"
    >
      See all {category} tips →
    </a>
  </div>
</div>

<style>
  /* height: auto is animatable because Layout.astro sets html { interpolate-size: allow-keywords } */
  .cat-content {
    height: 0;
    transition: height 300ms ease, margin-top 200ms ease;
  }
  .cat-content.is-open {
    height: auto;
    margin-top: 0.75rem;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    document.querySelectorAll('.cat-accordion').forEach((accordion) => {
      const header = accordion.querySelector('.cat-header');
      const content = accordion.querySelector('.cat-content');
      const chevron = accordion.querySelector('.cat-chevron');
      if (!header || !content || !chevron) return;
      header.addEventListener('click', () => {
        const expanded = header.getAttribute('aria-expanded') === 'true';
        if (expanded) {
          header.setAttribute('aria-expanded', 'false');
          content.classList.remove('is-open');
          chevron.classList.remove('rotate-90');
        } else {
          header.setAttribute('aria-expanded', 'true');
          content.classList.add('is-open');
          chevron.classList.add('rotate-90');
        }
      });
    });
  });
</script>
