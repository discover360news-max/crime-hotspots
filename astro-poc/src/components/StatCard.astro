---
/**
 * StatCard Component
 * Displays a single crime statistic with large number and label
 * Used in the horizontal scrolling stats section on dashboard
 */

interface Props {
  value: number;
  label: string;
  id?: string;
}

const { value, label, id } = Astro.props;
---

<div class="stat-card bg-white/50 backdrop-blur-md rounded-lg p-4 shadow-sm" id={id}>
  <div class="text-3xl font-bold text-rose-600">{value}</div>
  <div class="text-xs text-slate-500">{label}</div>
</div>
