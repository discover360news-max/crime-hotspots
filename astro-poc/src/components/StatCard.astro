---
/**
 * StatCard Component
 * Displays a single crime statistic with large number and label
 * Used in the horizontal scrolling stats section on dashboard
 * Clickable to filter dashboard by crime type
 * Now includes trend indicators (vs previous period)
 */

interface Props {
  value: number;
  label: string;
  id?: string;
  crimeType?: string; // Crime type to filter by (e.g., "Murder", "Robbery")
}

const { value, label, id, crimeType } = Astro.props;
---

<div
  class="stat-card bg-white/50 backdrop-blur-md rounded-lg p-4 shadow-sm cursor-pointer transition-all duration-200 hover:shadow-lg border-2 border-transparent"
  id={id}
  data-crime-type={crimeType}
>
  <div class="text-3xl font-bold text-rose-600">{value}</div>
  <div class="text-xs text-slate-500">{label}</div>
  <!-- Trend indicator (populated by JavaScript) -->
  <div class="trend-indicator text-xs text-slate-500 mt-4 hidden"></div>
</div>

<style>
  .stat-card:hover {
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.15), 0 4px 6px -4px rgb(0 0 0 / 0.15);
  }

  .stat-card.active {
    border-color: #e11d48;
    background: rgba(255, 255, 255, 0.7);
  }
</style>
