---
/**
 * DataTable Component
 * Responsive table for displaying statistics data
 *
 * Usage:
 * <DataTable
 *   headers={['Crime Type', '2026', '2025', 'Change']}
 *   rows={[...]}
 *   type="comparison" // or "ranking"
 * />
 */

interface Props {
  headers: string[];
  rows: any[][];
  type?: 'comparison' | 'ranking';
}

const { headers, rows, type = 'comparison' } = Astro.props;
---

<div class="bg-white dark:bg-[hsl(0_0%_10%)] rounded-lg border border-slate-200 dark:border-[hsl(0_0%_18%)] overflow-hidden shadow-sm">
  <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="bg-slate-50 dark:bg-[hsl(0_0%_12%)] border-b border-slate-200 dark:border-[hsl(0_0%_18%)]">
        <tr>
          {headers.map((header, index) => (
            <th class={`px-4 py-3 font-semibold text-slate-700 dark:text-[hsl(0_0%_80%)] ${index === 0 ? 'text-left' : 'text-right'}`}>
              {header}
            </th>
          ))}
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100 dark:divide-[hsl(0_0%_15%)]">
        <slot />
      </tbody>
    </table>
  </div>
</div>
