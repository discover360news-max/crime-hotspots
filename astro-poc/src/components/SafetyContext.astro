---
/**
 * SafetyContext Component
 * Displays area-based safety tips and positive notes
 * Part of "The Safety Strength Engine" system
 *
 * Usage:
 * <SafetyContext
 *   areaName="Port of Spain"
 *   score={8.5}
 *   level="high"
 *   tip="Safety tip text..."
 *   positiveNote="Optional positive note..."
 * />
 */

interface Props {
  areaName: string;
  score: number;
  level: 'high' | 'neutral' | 'low';
  tip: string;
  positiveNote?: string;
  primaryCrimeType?: string;
}

const { areaName, score, level, tip, positiveNote, primaryCrimeType } = Astro.props;

// Color schemes by level
const levelStyles = {
  high: {
    bg: 'bg-amber-50',
    border: 'border-amber-200',
    icon: 'text-amber-600',
    title: 'text-amber-800',
    text: 'text-slate-700',
    label: 'Active Safety Alert'
  },
  neutral: {
    bg: 'bg-slate-50',
    border: 'border-slate-200',
    icon: 'text-slate-500',
    title: 'text-slate-700',
    text: 'text-slate-600',
    label: 'Community Standing: Stable'
  },
  low: {
    bg: 'bg-emerald-50',
    border: 'border-emerald-200',
    icon: 'text-emerald-600',
    title: 'text-emerald-800',
    text: 'text-slate-700',
    label: 'Safe Haven Status'
  }
};

const style = levelStyles[level];
---

<div class={`${style.bg} ${style.border} border rounded-lg p-5 mt-6 mb-6`}>
  <!-- Header -->
  <div class="flex items-start gap-3 mb-3">
    <!-- Icon -->
    <div class={`${style.icon} flex-shrink-0 mt-0.5`}>
      {level === 'high' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      )}
      {level === 'neutral' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
      )}
      {level === 'low' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      )}
    </div>

    <div class="flex-1">
      <!-- Title -->
      <h3 class={`text-sm font-semibold ${style.title} mb-1`}>
        {style.label} - {areaName}
      </h3>

      <!-- Score Badge (optional display) -->
      <div class="text-xs text-slate-500 mb-3">
        Risk Level: {score.toFixed(1)}/10
        {primaryCrimeType && <span class="ml-2">â€¢ Primary Concern: {primaryCrimeType}</span>}
      </div>

      <!-- Safety Tip -->
      <p class={`text-sm ${style.text} leading-relaxed mb-3`}>
        {tip}
      </p>

      <!-- Positive Note (if present) -->
      {positiveNote && (
        <div class="mt-3 pt-3 border-t border-slate-200">
          <p class="text-sm text-slate-600 leading-relaxed italic">
            {positiveNote}
          </p>
        </div>
      )}
    </div>
  </div>
</div>
