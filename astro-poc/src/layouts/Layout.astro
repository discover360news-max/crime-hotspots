---
import Header from '../components/Header.astro';
import DashboardModal from '../components/DashboardModal.astro';
import HeadlinesModal from '../components/HeadlinesModal.astro';
import ArchivesModal from '../components/ArchivesModal.astro';
import AreasModal from '../components/AreasModal.astro';
import SearchModal from '../components/SearchModal.astro';
import CrimeDetailModal from '../components/CrimeDetailModal.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  includeLeaflet?: boolean;
  includePagefind?: boolean;
  includeTurnstile?: boolean;
}

const {
  title,
  description = "Real-time crime statistics and interactive dashboards for the Caribbean",
  ogImage = "https://crimehotspots.com/og-image.jpg",
  includeLeaflet = false,
  includePagefind = true,
  includeTurnstile = false
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : `https://crimehotspots.com${Astro.url.pathname}`;

const isHomepage = Astro.url.pathname === '/';
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:site_name" content="Crime Hotspots">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>

  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <meta name="theme-color" content="#e11d48">

  <!-- Security: Content Security Policy (meta tag - proven to work with Turnstile) -->
  <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://cdn.jsdelivr.net https://challenges.cloudflare.com https://static.cloudflareinsights.com https://www.googletagmanager.com https://*.google-analytics.com https://unpkg.com; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://unpkg.com https://cdn.jsdelivr.net; font-src 'self'; img-src 'self' data: https:; frame-src 'self' https://*.google.com https://*.googleusercontent.com https://challenges.cloudflare.com https://lookerstudio.google.com https://docs.google.com; connect-src 'self' https://cdn.jsdelivr.net https://docs.google.com https://*.google.com https://*.googleusercontent.com https://*.googleapis.com https://script.google.com https://challenges.cloudflare.com https://cloudflareinsights.com https://static.cloudflareinsights.com https://*.google-analytics.com https://*.analytics.google.com https://*.googletagmanager.com https://unpkg.com; form-action 'self' https://script.google.com; frame-ancestors 'none'; base-uri 'self'; object-src 'none'">

  <!-- Resource Hints for Critical Domains -->
  <link rel="dns-prefetch" href="https://static.cloudflareinsights.com">

  <!-- Conditional Leaflet CSS (only load on pages with maps) -->
  {includeLeaflet && (
    <>
      <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" media="print" onload="this.media='all'"/>
      <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css" media="print" onload="this.media='all'"/>
      <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css" media="print" onload="this.media='all'"/>
    </>
  )}

  <!-- Conditional Pagefind CSS & JS (only load on pages that need search) -->
  {includePagefind && (
    <>
      <link rel="stylesheet" href="/pagefind/pagefind-ui.css" media="print" onload="this.media='all'"/>
      <script is:inline src="/pagefind/pagefind-ui.js" defer></script>
    </>
  )}

  <!-- Self-hosted Inter font (eliminates external request chain for faster LCP) -->
  <link rel="preload" href="/fonts/inter-latin.woff2" as="font" type="font/woff2" crossorigin>


  {includeTurnstile && (
    <!-- Cloudflare Turnstile (loaded only on pages with forms) -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit" defer></script>
  )}

  <!-- Cloudflare Web Analytics (cookieless, no consent needed, tracks all real visitors) -->
  <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "9edc1888af84466fa5b067943e7c6f99"}'></script>

  <!-- Cookie Consent & Analytics -->
  <script>
    import { initCookieConsent } from '../lib/utils/cookieConsent';
    import { initAnalytics } from '../lib/utils/analytics';

    // Initialize GA4 only after user consent (detailed behavior tracking)
    initCookieConsent({
      onAccept: () => {
        initAnalytics({
          provider: 'ga4',
          ga4MeasurementId: 'G-JMQ8B4DYEG',
          anonymizeIp: true,
          debug: false
        });
      }
    });
  </script>
</head>

<style is:global>
  @import "tailwindcss";

  /* Self-hosted Inter font */
  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url('/fonts/inter-latin.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url('/fonts/inter-latin-ext.woff2') format('woff2');
    unicode-range: U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7, U+02DD-02FF, U+0304, U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
  }

  /* Global Leaflet Cluster Overrides - Must come after Leaflet CSS loads */
  .marker-cluster-small,
  .marker-cluster-medium,
  .marker-cluster-large {
    background-color: transparent !important;
  }

  .marker-cluster-small div,
  .marker-cluster-medium div,
  .marker-cluster-large div {
    background-color: transparent !important;
    margin: 0 !important;
    width: 100% !important;
    height: 100% !important;
  }

  /* Custom cluster icon wrapper */
  .custom-cluster-icon {
    background: transparent !important;
    border: none !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  /* Custom cluster circles */
  .cluster-small,
  .cluster-medium,
  .cluster-large {
    display: inline-block !important;
    width: 40px !important;
    height: 40px !important;
    line-height: 40px !important;
    border-radius: 50% !important;
    text-align: center !important;
    font-weight: bold !important;
    color: white !important;
    border: 2px solid white !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3) !important;
    font-size: 14px !important;
  }

  .cluster-small {
    background-color: #fca5a5 !important;
  }

  .cluster-medium {
    background-color: #ef4444 !important;
  }

  .cluster-large {
    background-color: #b91c1c !important;
  }
</style>

<body class="bg-slate-100 text-slate-700 min-h-screen font-sans">
  <!-- Header Component -->
  <Header isHomepage={isHomepage} />

  <!-- Search Modal -->
  <SearchModal />

  <!-- Dashboard Selection Modal -->
  <DashboardModal />

  <!-- Headlines Selection Modal -->
  <HeadlinesModal />

  <!-- Archives Selection Modal -->
  <ArchivesModal />

  <!-- Areas Selection Modal (fallback for non-country pages) -->
  <AreasModal />

  <!-- Crime Detail Modal -->
  <CrimeDetailModal />

  <!-- Main Content -->
  <main data-pagefind-body>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-white/50 border-t border-slate-200 mt-30" data-pagefind-ignore>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
        <!-- About -->
        <div>
          <h3 class="text-h3 font-bold text-slate-700 mb-4">Crime Hotspots</h3>
          <p class="text-xs text-slate-400">
            Real-time crime statistics and interactive dashboards for the Caribbean.
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="text-nav font-semibold text-slate-700 mb-4">Quick Links</h4>
          <ul class="space-y-1">
            <li><a href="/trinidad/archive" class="text-small text-slate-400 hover:text-rose-600">Archives</a></li>
            <li><a href="/about" class="text-small text-slate-400 hover:text-rose-600">About</a></li>
            <li><a href="/methodology" class="text-small text-slate-400 hover:text-rose-600">Methodology</a></li>
            <li><a href="/faq" class="text-small text-slate-400 hover:text-rose-600">FAQ</a></li>
            <li><a href="/privacy" class="text-small text-slate-400 hover:text-rose-600">Privacy Policy</a></li>
            <li><a href="/business-solutions" class="text-small text-slate-400 hover:text-rose-600">Business Solutions</a></li>
          </ul>
        </div>

        <!-- Social -->
        <div class="col-span-2 md:col-span-1">
          <h4 class="text-nav font-semibold text-slate-700 mb-4">Follow Us</h4>
          <div class="flex gap-4 items-center justify-between">
            <div class="flex gap-4 items-center">
              <a href="https://x.com/crimehotsp0ts" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-rose-600" aria-label="X (Twitter)">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a href="https://facebook.com/caribbeancrimehotspots" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-rose-600" aria-label="Facebook">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="https://whatsapp.com/channel/0029VbBD2mC3gvWTuWxMO21P" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-rose-600" aria-label="WhatsApp">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              </a>
            </div>

            <!-- Search Button -->
            <button
              onclick="window.openSearchModal()"
              class="p-2 rounded-full bg-rose-600 text-white hover:bg-rose-700 active:bg-rose-800 transition shadow-md hover:shadow-lg md:hidden"
              aria-label="Search"
              title="Search (Ctrl+K)"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <div class="mt-8 pt-8 border-t border-slate-200 text-center">
        <p class="text-xs text-slate-500">
          &copy; {new Date().getFullYear()} Crime Hotspots. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</body>
</html>
