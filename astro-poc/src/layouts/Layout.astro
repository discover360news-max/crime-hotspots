---
import Header from '../components/Header.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = "Real-time crime statistics and interactive dashboards for the Caribbean",
  ogImage = "https://crimehotspots.com/og-image.jpg"
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : `https://crimehotspots.com${Astro.url.pathname}`;

const isHomepage = Astro.url.pathname === '/';
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:site_name" content="Crime Hotspots">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>

  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <meta name="theme-color" content="#e11d48">

  <!-- Security: Content Security Policy (meta tag - proven to work with Turnstile) -->
  <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://cdn.jsdelivr.net https://challenges.cloudflare.com https://static.cloudflareinsights.com https://www.googletagmanager.com https://*.google-analytics.com https://unpkg.com; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://fonts.googleapis.com https://unpkg.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-src 'self' https://*.google.com https://*.googleusercontent.com https://challenges.cloudflare.com https://lookerstudio.google.com https://docs.google.com; connect-src 'self' https://cdn.jsdelivr.net https://docs.google.com https://*.google.com https://*.googleusercontent.com https://*.googleapis.com https://script.google.com https://challenges.cloudflare.com https://cloudflareinsights.com https://static.cloudflareinsights.com https://*.google-analytics.com https://*.analytics.google.com https://*.googletagmanager.com https://unpkg.com; form-action 'self' https://script.google.com; frame-ancestors 'none'; base-uri 'self'; object-src 'none'">

  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet.fullscreen@3.0.1/Control.FullScreen.css" />

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

  <!-- Cloudflare Turnstile (loaded globally for all pages) -->
  <script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <!-- Cookie Consent & Analytics -->
  <script>
    import { initCookieConsent } from '../lib/utils/cookieConsent';
    import { initAnalytics } from '../lib/utils/analytics';

    initCookieConsent({
      onAccept: () => {
        initAnalytics({
          provider: 'ga4',
          ga4MeasurementId: 'G-JMQ8B4DYEG',
          anonymizeIp: true,
          debug: false
        });
      }
    });
  </script>
</head>

<style is:global>
  @import "tailwindcss";

  /* Global Leaflet Cluster Overrides - Must come after Leaflet CSS loads */
  .marker-cluster-small,
  .marker-cluster-medium,
  .marker-cluster-large {
    background-color: transparent !important;
  }

  /* Hide fullscreen button on desktop */
  @media (min-width: 768px) {
    .leaflet-control-fullscreen {
      display: none !important;
    }
  }

  /* Ensure fullscreen controls are always visible with high z-index */
  .leaflet-control-fullscreen {
    z-index: 9999 !important;
  }

  /* Mobile: Position fullscreen button within viewport */
  @media (max-width: 767px) {
    .leaflet-control-fullscreen {
      position: absolute !important;
      top: 10px !important;
      right: 10px !important;
      margin: 0 !important;
    }

    .leaflet-control-fullscreen a {
      width: 34px !important;
      height: 34px !important;
      line-height: 34px !important;
      display: block !important;
    }
  }

  /* When map is in fullscreen, ensure exit button is visible */
  .leaflet-container.leaflet-fullscreen-on {
    z-index: 9998 !important;
  }

  .leaflet-container.leaflet-fullscreen-on .leaflet-control-fullscreen {
    z-index: 9999 !important;
    position: fixed !important;
    top: 10px !important;
    right: 10px !important;
  }

  .marker-cluster-small div,
  .marker-cluster-medium div,
  .marker-cluster-large div {
    background-color: transparent !important;
    margin: 0 !important;
    width: 100% !important;
    height: 100% !important;
  }

  /* Custom cluster icon wrapper */
  .custom-cluster-icon {
    background: transparent !important;
    border: none !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  /* Custom cluster circles */
  .cluster-small,
  .cluster-medium,
  .cluster-large {
    display: inline-block !important;
    width: 40px !important;
    height: 40px !important;
    line-height: 40px !important;
    border-radius: 50% !important;
    text-align: center !important;
    font-weight: bold !important;
    color: white !important;
    border: 2px solid white !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3) !important;
    font-size: 14px !important;
  }

  .cluster-small {
    background-color: #fca5a5 !important;
  }

  .cluster-medium {
    background-color: #ef4444 !important;
  }

  .cluster-large {
    background-color: #b91c1c !important;
  }
</style>

<body class="bg-slate-100 text-slate-700 min-h-screen font-sans">
  <!-- Header Component -->
  <Header isHomepage={isHomepage} />

  <!-- Main Content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-white/50 border-t border-slate-200 mt-30">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
        <!-- About -->
        <div>
          <h3 class="text-h3 font-bold text-slate-700 mb-4">Crime Hotspots</h3>
          <p class="text-xs text-slate-400">
            Real-time crime statistics and interactive dashboards for the Caribbean.
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="text-nav font-semibold text-slate-700 mb-4">Quick Links</h4>
          <ul class="space-y-1">
            <li><a href="/trinidad/archive" class="text-small text-slate-400 hover:text-rose-600">Archives</a></li>
            <li><a href="/about" class="text-small text-slate-400 hover:text-rose-600">About</a></li>
            <li><a href="/methodology" class="text-small text-slate-400 hover:text-rose-600">Methodology</a></li>
            <li><a href="/faq" class="text-small text-slate-400 hover:text-rose-600">FAQ</a></li>
          </ul>
        </div>

        <!-- Social -->
        <div>
