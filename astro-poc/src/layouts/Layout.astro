---
import Header from '../components/Header.astro';
import BottomNav from '../components/BottomNav.astro';
import { routes } from '../config/routes';
import IslandSelectorModal from '../components/IslandSelectorModal.astro';
import SearchModal from '../components/SearchModal.astro';
import CrimeDetailModal from '../components/CrimeDetailModal.astro';
import SectionPickerModal from '../components/SectionPickerModal.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  includeLeaflet?: boolean;
  includePagefind?: boolean;
  includeTurnstile?: boolean;
}

const {
  title,
  description = "Real-time crime statistics and interactive dashboards for the Caribbean",
  ogImage = "https://crimehotspots.com/og-image.jpg",
  includeLeaflet = false,
  includePagefind = true,
  includeTurnstile = false
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : `https://crimehotspots.com${Astro.url.pathname}`;

const isHomepage = Astro.url.pathname === '/';

// Detect country from URL path for BottomNav context
// Maps URL prefix → country ID (add new countries here)
const countryPathMap: Record<string, string> = {
  '/trinidad': 'tt',
  '/guyana': 'gy',
  '/barbados': 'bb',
  '/jamaica': 'jm',
};
const detectedCountryId = Object.entries(countryPathMap).find(
  ([path]) => Astro.url.pathname.startsWith(path)
)?.[1] || 'tt';
---

<!doctype html>
<html lang="en" class="dark">
<head>
  <!-- DARK MODE ANTI-FLASH: Must be first script in <head>, before any CSS loads -->
  <!-- TEMPORARY: Force light mode until dark mode polish is complete. Revert by restoring the stored-theme logic below. -->
  <script is:inline>
    (function() {
      document.documentElement.classList.remove('dark');
      localStorage.setItem('crimehotspots-theme', 'light');
    })();
  </script>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:site_name" content="Crime Hotspots">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>

  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <meta name="theme-color" content="#e11d48">

  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="Crime Hotspots RSS" href="/rss.xml">

  <!-- CSP is enforced via Cloudflare _headers file (single source of truth) -->
  <!-- Do NOT add a <meta> CSP here — dual CSPs conflict and break Turnstile -->

  <!-- Resource Hints for Critical Domains -->
  <link rel="dns-prefetch" href="https://static.cloudflareinsights.com">

  <!-- Conditional Leaflet CSS (only load on pages with maps) -->
  {includeLeaflet && (
    <>
      <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" media="print" onload="this.media='all'"/>
      <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css" media="print" onload="this.media='all'"/>
      <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css" media="print" onload="this.media='all'"/>
    </>
  )}

  <!-- Conditional Pagefind CSS & JS (only load on pages that need search) -->
  {includePagefind && (
    <>
      <link rel="stylesheet" href="/pagefind/pagefind-ui.css" media="print" onload="this.media='all'"/>
      <script is:inline src="/pagefind/pagefind-ui.js" defer></script>
    </>
  )}

  <!-- Self-hosted Inter font (eliminates external request chain for faster LCP) -->
  <link rel="preload" href="/fonts/inter-latin.woff2" as="font" type="font/woff2" crossorigin>


  {includeTurnstile && (
    <!-- Cloudflare Turnstile (loaded only on pages with forms) -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit" defer></script>
  )}

  <!-- Critical inline styles to prevent CLS before main CSS bundle loads -->
  <style>
    #mainNav { display: none }
    @media (min-width: 768px) { #mainNav { display: flex } }
  </style>

  <!-- Cloudflare Web Analytics (cookieless, no consent needed, tracks all real visitors) -->
  <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "9edc1888af84466fa5b067943e7c6f99"}'></script>

  <!-- Grow Monetization -->
  <script is:inline data-grow-initializer="">!(function(){window.growMe||((window.growMe=function(e){window.growMe._.push(e);}),(window.growMe._=[]));var e=document.createElement("script");(e.type="text/javascript"),(e.src="https://faves.grow.me/main.js"),(e.defer=!0),e.setAttribute("data-grow-faves-site-id","U2l0ZTpjYmI0YmEwMC0xM2ZhLTQ0ZmEtOTExYy0wNDNhY2MxMzI1NmQ=");var t=document.getElementsByTagName("script")[0];t.parentNode.insertBefore(e,t);})();</script>

  <!-- Cookie Consent & Analytics -->
  <script>
    import { initCookieConsent } from '../lib/utils/cookieConsent';
    import { initAnalytics } from '../lib/utils/analytics';

    // Initialize GA4 only after user consent (detailed behavior tracking)
    initCookieConsent({
      onAccept: () => {
        initAnalytics({
          provider: 'ga4',
          ga4MeasurementId: 'G-JMQ8B4DYEG',
          anonymizeIp: true,
          debug: false
        });
      }
    });
  </script>
</head>

<style is:global>
  @import "tailwindcss";

  /* Tailwind v4: class-based dark mode via .dark on <html> */
  @variant dark (&:is(.dark, .dark *));

  @theme {
    /* DESIGN SYSTEM v2: Strict 4-level type scale */
    --text-display: 2rem;
    --text-display--line-height: 1.2;
    --text-display--letter-spacing: -0.02em;

    --text-heading: 1.375rem;
    --text-heading--line-height: 1.35;
    --text-heading--letter-spacing: -0.01em;

    --text-body: 1.125rem;
    --text-body--line-height: 1.65;

    --text-caption: 0.75rem;
    --text-caption--line-height: 1.35;
    --text-caption--letter-spacing: 0.02em;
  }

  /* Dark mode CSS custom properties — used in JS-generated innerHTML
     where Tailwind dark: classes can't be scanned reliably */
  :root {
    --ch-bg: hsl(0 0% 94%);
    --ch-surface: hsl(0 0% 100%);
    --ch-text: hsl(0 0% 20%);
    --ch-text-muted: hsl(0 0% 45%);
    --ch-border: hsl(0 0% 88%);
    --ch-pill-bg: #e2e8f0;          /* slate-200 pill/badge bg */
    --ch-pill-text: #475569;        /* slate-600 pill/badge text */
  }
  .dark {
    --ch-bg: hsl(0 0% 3%);
    --ch-surface: hsl(0 0% 8%);
    --ch-text: hsl(0 0% 92%);
    --ch-text-muted: hsl(0 0% 70%);
    --ch-border: hsl(0 0% 18%);
    --ch-pill-bg: hsl(0 0% 20%);           /* dark pill/badge bg */
    --ch-pill-text: hsl(0 0% 55%);         /* dark pill/badge text */
    color-scheme: dark;                     /* native form icons (date picker, select arrows) */
  }

  /* Self-hosted Inter font */
  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url('/fonts/inter-latin.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url('/fonts/inter-latin-ext.woff2') format('woff2');
    unicode-range: U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7, U+02DD-02FF, U+0304, U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
  }

  /* Global Leaflet Cluster Overrides - Must come after Leaflet CSS loads */
  .marker-cluster-small,
  .marker-cluster-medium,
  .marker-cluster-large {
    background-color: transparent !important;
  }

  .marker-cluster-small div,
  .marker-cluster-medium div,
  .marker-cluster-large div {
    background-color: transparent !important;
    margin: 0 !important;
    width: 100% !important;
    height: 100% !important;
  }

  /* Custom cluster icon wrapper */
  .custom-cluster-icon {
    background: transparent !important;
    border: none !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  /* Custom cluster circles */
  .cluster-small,
  .cluster-medium,
  .cluster-large {
    display: inline-block !important;
    width: 40px !important;
    height: 40px !important;
    line-height: 40px !important;
    border-radius: 50% !important;
    text-align: center !important;
    font-weight: bold !important;
    color: white !important;
    border: 2px solid white !important;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3) !important;
    font-size: 14px !important;
  }

  .cluster-small {
    background-color: #fda4af !important; /* rose-300 — low density */
  }

  .cluster-medium {
    background-color: #e11d48 !important; /* rose-600 — medium density */
  }

  .cluster-large {
    background-color: #be123c !important; /* rose-700 — high density */
  }
</style>

<body class="bg-slate-100 dark:bg-[hsl(0_0%_3%)] text-slate-700 dark:text-[hsl(0_0%_92%)] min-h-screen font-sans transition-colors duration-200">
  <!-- Header Component -->
  <Header isHomepage={isHomepage} />

  <!-- Search Modal -->
  <SearchModal />

  <!-- Unified Island Selector Modal (dashboard / headlines / archives / areas) -->
  <IslandSelectorModal />

  <!-- Crime Detail Modal -->
  <CrimeDetailModal />

  <!-- Section Picker Modal (island sections) -->
  <SectionPickerModal />

  <!-- Main Content -->
  <main data-pagefind-body>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-white/85 dark:bg-[hsl(0_0%_5%)] border-t border-slate-200 dark:border-[hsl(0_0%_18%)] mt-16" data-pagefind-ignore>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Navigation Columns -->
      <div class="grid grid-cols-2 gap-8">
        <!-- Browse (Primary Navigation) -->
        <div>
          <h4 class="text-caption font-bold text-slate-700 dark:text-[hsl(0_0%_92%)] mb-4 uppercase tracking-wider">Browse</h4>
          <ul class="space-y-1">
            <li><a href={routes.trinidad.dashboard} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Dashboard</a></li>
            <li><a href={routes.trinidad.headlines} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Headlines</a></li>
            <li><a href={routes.trinidad.areas} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Areas</a></li>
            <li><a href={routes.trinidad.archive} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Archive</a></li>
            <li><a href={routes.report} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Report a Crime</a></li>
