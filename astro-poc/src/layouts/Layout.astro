          <ul class="space-y-1">
            <li><a href={routes.about} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">About</a></li>
            <li><a href={routes.contact} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Contact</a></li>
            <li><a href={routes.methodology} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Methodology</a></li>
            <li><a href={routes.faq} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">FAQ</a></li>
            <li><a href={routes.privacy} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Privacy Policy</a></li>
            <li><a href={routes.businessSolutions} class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400">Business Solutions</a></li>
          </ul>
        </div>
      </div>

      <!-- Brand Signature + Socials -->
      <div class="mt-8 pt-8 border-t border-slate-200 dark:border-[hsl(0_0%_18%)]">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h3 class="text-body font-bold text-slate-700 dark:text-[hsl(0_0%_92%)]">Crime Hotspots</h3>
            <p class="text-caption text-slate-400 dark:text-[hsl(0_0%_55%)] mt-1">&copy; {new Date().getFullYear()} Crime Hotspots. All rights reserved.</p>
          </div>
          <div class="flex gap-4 items-center">
            <a href="https://x.com/crimehotsp0ts" target="_blank" rel="noopener noreferrer" class="text-slate-400 dark:text-[hsl(0_0%_55%)] hover:text-rose-600 dark:hover:text-rose-400" aria-label="X (Twitter)">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
