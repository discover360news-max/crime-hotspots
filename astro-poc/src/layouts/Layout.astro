          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bottom Navigation (Mobile Only) -->
  {!isHomepage && <BottomNav countryId={detectedCountryId} />}

  <!-- Theme Toggle Logic (must be inline — no ES module imports allowed in is:inline) -->
  <script is:inline>
    function applyTheme(isDark) {
      if (isDark) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      // Sun icon = shown in dark mode (clicking switches to light)
      document.querySelectorAll('[id^="themeIconSun"]').forEach(function(el) {
        el.classList.toggle('hidden', !isDark);
      });
      // Moon icon = shown in light mode (clicking switches to dark)
      document.querySelectorAll('[id^="themeIconMoon"]').forEach(function(el) {
        el.classList.toggle('hidden', isDark);
      });
      // BottomNav More menu label
      var lbl = document.getElementById('moreMenuThemeLabel');
      if (lbl) lbl.textContent = isDark ? 'Light Mode' : 'Dark Mode';
    }

    window.toggleTheme = function() {
      var isDark = !document.documentElement.classList.contains('dark');
      localStorage.setItem('crimehotspots-theme', isDark ? 'dark' : 'light');
      applyTheme(isDark);
    };

    // Initialise icon state on page load
    applyTheme(document.documentElement.classList.contains('dark'));
  </script>
</body>
</html>
