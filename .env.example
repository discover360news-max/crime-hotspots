# Crime Hotspots - Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# Google Apps Script Webhook
# ============================================
# The deployed URL from your Google Apps Script for form submissions
VITE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec

# ============================================
# Cloudflare Turnstile CAPTCHA
# ============================================
# Get these from: https://dash.cloudflare.com/
VITE_TURNSTILE_SITE_KEY=0x4AAAAAAB_YourSiteKey
# Note: Secret key should NEVER be in client-side code
# It must be used only in server-side validation (Google Apps Script)

# ============================================
# Google Sheets CSV URLs
# ============================================
# Trinidad & Tobago Headlines CSV
VITE_TT_CSV_URL=https://docs.google.com/spreadsheets/d/e/YOUR_SHEET_ID/pub?gid=YOUR_GID&single=true&output=csv

# Trinidad & Tobago Areas CSV
VITE_TT_AREAS_CSV_URL=https://docs.google.com/spreadsheets/d/e/YOUR_SHEET_ID/pub?gid=YOUR_GID&single=true&output=csv

# Guyana Headlines CSV (future)
VITE_GUYANA_CSV_URL=

# Barbados Headlines CSV (future)
VITE_BARBADOS_CSV_URL=

# ============================================
# Feature Flags
# ============================================
# Enable/disable features during development
VITE_ENABLE_ANALYTICS=false
VITE_DEBUG_MODE=false
VITE_ENABLE_GUYANA=false
VITE_ENABLE_BARBADOS=false

# ============================================
# Security Configuration
# ============================================
# Enable additional security logging (development only)
VITE_SECURITY_LOGGING=false

# Rate limiting (client-side UI hints)
VITE_MAX_SUBMISSIONS_PER_HOUR=3
VITE_MIN_SUBMISSION_INTERVAL_MS=2000
